{% extends 'admin/base.html.twig' %}

{% block title %}Définitions d'attributs{% endblock %}

{% block body %}
<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">Définitions d'attributs</h1>
                <p class="mt-1 text-sm text-gray-600">Gérez les types d'attributs disponibles pour les entités</p>
            </div>
            <a href="{{ path('admin_attribute_definitions_new') }}" 
               class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-club-orange hover:bg-club-orange-dark">
                + Nouvel attribut
            </a>
        </div>
    </div>

    <div class="p-6">
        {% if definitions is empty %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune définition d'attribut</h3>
                <p class="mt-1 text-sm text-gray-500">Commencez par créer une définition d'attribut.</p>
            </div>
        {% else %}
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                <table class="min-w-full divide-y divide-gray-300">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Label</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Entité</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                            <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for definition in definitions %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">{{ definition.name }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">{{ definition.label }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        {% if definition.entityType == 'App\\Entity\\User' %}
                                            Utilisateur
                                        {% elseif definition.entityType == 'App\\Entity\\Event' %}
                                            Événement
                                        {% else %}
                                            {{ definition.entityType }}
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        {% set fieldTypes = {
                                            'text': 'Texte',
                                            'email': 'Email',
                                            'tel': 'Téléphone',
                                            'date': 'Date',
                                            'number': 'Nombre',
                                            'select': 'Liste déroulante',
                                            'radio': 'Boutons radio',
                                            'checkbox': 'Case à cocher',
                                            'textarea': 'Texte long'
                                        } %}
                                        {{ fieldTypes[definition.fieldType] ?? definition.fieldType }}
                                        {% if definition.required %}
                                            <span class="ml-1 text-red-500">*</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ definition.active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                        {{ definition.active ? 'Actif' : 'Inactif' }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
                                    <a href="{{ path('admin_attribute_definitions_edit', {id: definition.id}) }}" 
                                       class="text-club-orange hover:text-club-orange-dark">
                                        Modifier
                                    </a>
                                    <form method="post" action="{{ path('admin_attribute_definitions_delete', {id: definition.id}) }}" 
                                          class="inline" onsubmit="return confirm('Supprimer cette définition ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_definition_' ~ definition.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-800">
                                            Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}