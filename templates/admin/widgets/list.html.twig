{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'widgets.title'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumb_items %}
    <li>
        <div class="flex items-center">
            <svg class="flex-shrink-0 h-4 w-4 sm:h-5 sm:w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-2 text-sm font-medium text-gray-500">{{ 'widgets.breadcrumb'|trans({}, 'admin') }}</span>
        </div>
    </li>
{% endblock %}

{% block content %}
<div class="w-[95%] mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex-auto">
            <h1 class="text-2xl font-semibold text-gray-900">{{ 'widgets.title'|trans({}, 'admin') }}</h1>
            <p class="mt-2 text-sm text-gray-700">
                {{ 'widgets.subtitle'|trans({}, 'admin') }}
            </p>
        </div>
        <div class="mt-4 sm:mt-0">
            <a href="{{ path('admin_widgets_create') }}" 
               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                {{ 'widgets.create'|trans({}, 'admin') }}
            </a>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'widgets.total'|trans({}, 'admin') }}</dt>
                            <dd class="text-lg font-medium text-gray-900">{{ stats.total }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'widgets.active'|trans({}, 'admin') }}</dt>
                            <dd class="text-lg font-medium text-gray-900">{{ stats.active }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636"></path>
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'widgets.inactive'|trans({}, 'admin') }}</dt>
                            <dd class="text-lg font-medium text-gray-900">{{ stats.inactive }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'widgets.categories'|trans({}, 'admin') }}</dt>
                            <dd class="text-lg font-medium text-gray-900">{{ stats.byCategory|length }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="mt-8 bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label for="search" class="block text-sm font-medium text-gray-700">{{ 'widgets.search'|trans({}, 'admin') }}</label>
                    <input type="text" name="search" id="search" value="{{ search }}" 
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                           placeholder="{{ 'widgets.search_placeholder'|trans({}, 'admin') }}">
                </div>

                <div>
                    <label for="category" class="block text-sm font-medium text-gray-700">{{ 'widgets.category'|trans({}, 'admin') }}</label>
                    <select name="category" id="category" 
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                        <option value="">{{ 'widgets.all_categories'|trans({}, 'admin') }}</option>
                        {% for value, label in availableCategories %}
                            <option value="{{ value }}" {{ selectedCategory == value ? 'selected' : '' }}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <label for="type" class="block text-sm font-medium text-gray-700">{{ 'widgets.type'|trans({}, 'admin') }}</label>
                    <select name="type" id="type" 
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                        <option value="">{{ 'widgets.all_types'|trans({}, 'admin') }}</option>
                        {% for value, label in availableTypes %}
                            <option value="{{ value }}" {{ selectedType == value ? 'selected' : '' }}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="flex items-end">
                    <button type="submit" 
                            class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        {{ 'widgets.filter'|trans({}, 'admin') }}
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des widgets -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for widget in widgets %}
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">{{ widget.title }}</h3>
                        <div class="flex items-center space-x-2">
                            {% if widget.active %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    {{ 'widgets.active'|trans({}, 'admin') }}
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    {{ 'widgets.inactive'|trans({}, 'admin') }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="mt-2">
                        <p class="text-sm text-gray-600">{{ widget.description ?: 'widgets.no_description'|trans({}, 'admin') }}</p>
                    </div>
                    
                    <div class="mt-4 flex items-center justify-between">
                        <div class="flex items-center space-x-2">
                            <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                {{ availableTypes[widget.type] }}
                            </span>
                            {% if widget.category %}
                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                    {{ availableCategories[widget.category] }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="mt-4 text-xs text-gray-500">
                        <div>{{ 'widgets.shortcode'|trans({}, 'admin') }}: <code class="bg-gray-100 px-1 rounded">[widget id="{{ widget.id }}"]</code></div>
                        <div class="mt-1">{{ 'widgets.name_shortcode'|trans({}, 'admin') }}: <code class="bg-gray-100 px-1 rounded">[widget name="{{ widget.name }}"]</code></div>
                    </div>
                    
                    <div class="mt-6 flex space-x-3">
                        <a href="{{ path('admin_widgets_show', {id: widget.id}) }}" 
                           class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            {{ 'widgets.view'|trans({}, 'admin') }}
                        </a>
                        <a href="{{ path('admin_widgets_edit', {id: widget.id}) }}" 
                           class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            {{ 'widgets.edit'|trans({}, 'admin') }}
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">{{ 'widgets.no_widgets'|trans({}, 'admin') }}</h3>
                <p class="mt-1 text-sm text-gray-500">{{ 'widgets.no_widgets_desc'|trans({}, 'admin') }}</p>
                <div class="mt-6">
                    <a href="{{ path('admin_widgets_create') }}" 
                       class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        {{ 'widgets.create'|trans({}, 'admin') }}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}