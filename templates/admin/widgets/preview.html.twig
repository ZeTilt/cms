<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'widgets.preview'|trans({}, 'admin') }} - {{ widget.title }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Styles spécifiques pour l'aperçu */
        .preview-container {
            border: 2px dashed #e5e7eb;
            background: repeating-linear-gradient(
                45deg,
                transparent,
                transparent 10px,
                rgba(255,255,255,.5) 10px,
                rgba(255,255,255,.5) 20px
            ), #f9fafb;
        }
        
        .widget-frame {
            background: white;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen p-8">
        <!-- En-tête -->
        <div class="max-w-4xl mx-auto mb-8">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">{{ 'widgets.preview'|trans({}, 'admin') }}</h1>
                        <p class="text-gray-600 mt-1">{{ widget.title }}</p>
                    </div>
                    <div class="flex items-center space-x-3">
                        {% if widget.active %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                {{ 'widgets.active'|trans({}, 'admin') }}
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                {{ 'widgets.inactive'|trans({}, 'admin') }}
                            </span>
                        {% endif %}
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                            {{ widget.type }}
                        </span>
                    </div>
                </div>
                
                <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                    <div>
                        <span class="font-medium text-gray-500">{{ 'widget.name'|trans({}, 'admin') }}:</span>
                        <span class="font-mono text-gray-900">{{ widget.name }}</span>
                    </div>
                    {% if widget.category %}
                    <div>
                        <span class="font-medium text-gray-500">{{ 'widget.category'|trans({}, 'admin') }}:</span>
                        <span class="text-gray-900">{{ widget.category }}</span>
                    </div>
                    {% endif %}
                    <div>
                        <span class="font-medium text-gray-500">{{ 'widget.cacheable'|trans({}, 'admin') }}:</span>
                        <span class="text-gray-900">
                            {% if widget.cacheable %}
                                {{ 'common.yes'|trans({}, 'admin') }} ({{ widget.cacheTime }}s)
                            {% else %}
                                {{ 'common.no'|trans({}, 'admin') }}
                            {% endif %}
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aperçu dans différents contextes -->
        <div class="max-w-4xl mx-auto space-y-8">
            <!-- Aperçu pleine largeur -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">{{ 'widgets.full_width_preview'|trans({}, 'admin') }}</h2>
                    <p class="text-sm text-gray-500 mt-1">{{ 'widgets.full_width_help'|trans({}, 'admin') }}</p>
                </div>
                <div class="p-6">
                    <div class="preview-container rounded-lg p-6">
                        <div class="widget-frame rounded-md p-4">
                            {% if widget.active %}
                                {{ renderedContent|raw }}
                            {% else %}
                                <div class="text-center py-8 text-gray-500">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L18.364 5.636"></path>
                                    </svg>
                                    <p class="mt-2">{{ 'widgets.inactive_preview'|trans({}, 'admin') }}</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Aperçu dans une sidebar -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">{{ 'widgets.sidebar_preview'|trans({}, 'admin') }}</h2>
                    <p class="text-sm text-gray-500 mt-1">{{ 'widgets.sidebar_help'|trans({}, 'admin') }}</p>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
                        <!-- Contenu principal simulé -->
                        <div class="lg:col-span-3">
                            <div class="bg-gray-100 rounded-lg p-6">
                                <div class="h-4 bg-gray-300 rounded mb-4"></div>
                                <div class="h-4 bg-gray-300 rounded mb-4 w-5/6"></div>
                                <div class="h-4 bg-gray-300 rounded mb-4 w-4/6"></div>
                                <div class="h-4 bg-gray-300 rounded w-3/6"></div>
                                <p class="text-center text-gray-500 mt-4 text-sm">{{ 'widgets.main_content_simulation'|trans({}, 'admin') }}</p>
                            </div>
                        </div>
                        
                        <!-- Widget dans la sidebar -->
                        <div class="lg:col-span-1">
                            <div class="preview-container rounded-lg p-4">
                                <div class="widget-frame rounded-md p-3">
                                    {% if widget.active %}
                                        <div style="transform: scale(0.8); transform-origin: top left; width: 125%;">
                                            {{ renderedContent|raw }}
                                        </div>
                                    {% else %}
                                        <div class="text-center py-4 text-gray-500">
                                            <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L18.364 5.636"></path>
                                            </svg>
                                            <p class="mt-1 text-xs">{{ 'widgets.inactive_preview'|trans({}, 'admin') }}</p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Code source -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">{{ 'widgets.source_code'|trans({}, 'admin') }}</h2>
                    <p class="text-sm text-gray-500 mt-1">{{ 'widgets.source_help'|trans({}, 'admin') }}</p>
                </div>
                <div class="p-6">
                    <pre class="bg-gray-900 text-gray-100 rounded-lg p-4 text-sm overflow-x-auto"><code>{{ widget.content }}</code></pre>
                </div>
            </div>

            <!-- Shortcodes -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">{{ 'widgets.integration'|trans({}, 'admin') }}</h2>
                    <p class="text-sm text-gray-500 mt-1">{{ 'widgets.integration_help'|trans({}, 'admin') }}</p>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'widgets.shortcode_id'|trans({}, 'admin') }}</label>
                        <div class="flex">
                            <input type="text" value="[widget id=&quot;{{ widget.id }}&quot;]" readonly
                                   class="flex-1 text-sm font-mono bg-gray-50 border border-gray-300 rounded-l-md px-3 py-2">
                            <button onclick="copyToClipboard(this.previousElementSibling.value)"
                                    class="px-3 py-2 border border-l-0 border-gray-300 bg-gray-50 text-gray-500 rounded-r-md hover:bg-gray-100">
                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'widgets.shortcode_name'|trans({}, 'admin') }}</label>
                        <div class="flex">
                            <input type="text" value="[widget name=&quot;{{ widget.name }}&quot;]" readonly
                                   class="flex-1 text-sm font-mono bg-gray-50 border border-gray-300 rounded-l-md px-3 py-2">
                            <button onclick="copyToClipboard(this.previousElementSibling.value)"
                                    class="px-3 py-2 border border-l-0 border-gray-300 bg-gray-50 text-gray-500 rounded-r-md hover:bg-gray-100">
                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">{{ 'widgets.twig_function'|trans({}, 'admin') }}</label>
                        <div class="flex">
                            <input type="text" value="{{ '{{ widget(' ~ widget.id ~ ') }}' }}" readonly
                                   class="flex-1 text-sm font-mono bg-gray-50 border border-gray-300 rounded-l-md px-3 py-2">
                            <button onclick="copyToClipboard(this.previousElementSibling.value)"
                                    class="px-3 py-2 border border-l-0 border-gray-300 bg-gray-50 text-gray-500 rounded-r-md hover:bg-gray-100">
                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="max-w-4xl mx-auto mt-8">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex justify-center space-x-4">
                    <a href="{{ path('admin_widgets_show', {id: widget.id}) }}" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        {{ 'widgets.back_to_widget'|trans({}, 'admin') }}
                    </a>
                    <a href="{{ path('admin_widgets_edit', {id: widget.id}) }}" 
                       class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        {{ 'widgets.edit'|trans({}, 'admin') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(function() {
            // Créer une notification temporaire
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50';
            notification.textContent = '{{ 'widgets.copied_to_clipboard'|trans({}, 'admin') }}';
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 2000);
        });
    }

    // Rafraîchir l'aperçu toutes les 30 secondes si le widget est en cache
    {% if widget.cacheable %}
    setInterval(function() {
        window.location.reload();
    }, 30000);
    {% endif %}
    </script>
</body>
</html>