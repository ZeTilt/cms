{% extends 'admin/base.html.twig' %}

{% block title %}{{ isNew ? 'Nouveau Type d\'Événement' : 'Modifier le Type d\'Événement' }}{% endblock %}

{% block page_title %}{{ isNew ? 'Nouveau Type d\'Événement' : 'Modifier le Type d\'Événement' }}{% endblock %}

{% block breadcrumb_items %}
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <a href="{{ path('admin_event_types_list') }}" class="text-gray-500 hover:text-gray-700">Types d'Événements</a>
</li>
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <span class="text-gray-500">{{ isNew ? 'Nouveau' : 'Modifier' }}</span>
</li>
{% endblock %}

{% block content %}
<div class="max-w-4xl">

    {% for message in app.flashes('error') %}
        <div class="mb-4 rounded-md bg-red-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-red-800">{{ message }}</p>
                </div>
            </div>
        </div>
    {% endfor %}

        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-lg">
            <form method="POST" class="space-y-6 p-6">
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div class="sm:col-span-2">
                        <label for="name" class="block text-sm font-medium leading-6 text-gray-900">
                            Nom du Type <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-2">
                            <input type="text" 
                                   name="name" 
                                   id="name" 
                                   value="{{ eventType.name ?? '' }}"
                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-club-orange sm:text-sm sm:leading-6"
                                   placeholder="Ex: Formation, Plongée, Sortie..."
                                   required>
                        </div>
                    </div>

                    <div>
                        <label for="code" class="block text-sm font-medium leading-6 text-gray-900">
                            Code
                        </label>
                        <div class="mt-2">
                            <input type="text" 
                                   name="code" 
                                   id="code" 
                                   value="{{ eventType.code ?? '' }}"
                                   readonly
                                   class="block w-full rounded-md border-0 py-1.5 text-gray-500 bg-gray-50 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm sm:leading-6"
                                   placeholder="Généré automatiquement depuis le nom">
                        </div>
                        <p class="mt-1 text-sm text-gray-500">Code généré automatiquement depuis le nom</p>
                    </div>

                    <div>
                        <label for="color" class="block text-sm font-medium leading-6 text-gray-900">
                            Couleur <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-2 flex items-center space-x-3">
                            <input type="color" 
                                   name="color" 
                                   id="color" 
                                   value="{{ eventType.color ?? '#FD7E29' }}"
                                   class="block w-12 h-10 rounded-md border border-gray-300 bg-white shadow-sm cursor-pointer">
                            <input type="text" 
                                   id="color-hex" 
                                   value="{{ eventType.color ?? '#FD7E29' }}"
                                   readonly
                                   class="block w-24 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <label for="description" class="block text-sm font-medium leading-6 text-gray-900">
                            Description
                        </label>
                        <div class="mt-2">
                            <textarea name="description" 
                                      id="description" 
                                      rows="3"
                                      class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-club-orange sm:text-sm sm:leading-6"
                                      placeholder="Description optionnelle du type d'événement...">{{ eventType.description ?? '' }}</textarea>
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <div class="flex items-center">
                            <input type="checkbox" 
                                   name="is_active" 
                                   id="is_active" 
                                   value="1"
                                   {{ (isNew or eventType.isActive) ? 'checked' : '' }}
                                   class="h-4 w-4 text-club-orange focus:ring-club-orange border-gray-300 rounded">
                            <label for="is_active" class="ml-2 block text-sm text-gray-900">
                                Type d'événement actif
                            </label>
                        </div>
                        <p class="mt-1 text-sm text-gray-500">Les types inactifs ne seront pas disponibles lors de la création d'événements</p>
                    </div>
                </div>

                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                    <a href="{{ path('admin_event_types_list') }}" class="text-sm font-semibold leading-6 text-gray-900 hover:text-gray-700">
                        Annuler
                    </a>
                    <button type="submit" class="rounded-md bg-club-orange px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-club-orange-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-club-orange">
                        {{ isNew ? 'Créer' : 'Enregistrer' }}
                    </button>
                </div>
            </form>
        </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const colorInput = document.getElementById('color');
    const colorHexInput = document.getElementById('color-hex');
    const nameInput = document.getElementById('name');
    const codeInput = document.getElementById('code');
    
    // Mise à jour de la couleur
    colorInput.addEventListener('input', function() {
        colorHexInput.value = this.value.toUpperCase();
    });
    
    // Auto-génération du code depuis le nom
    nameInput.addEventListener('input', function() {
        const slug = this.value
            .toLowerCase()
            .trim()
            // Remplacer les caractères spéciaux et espaces par des underscores
            .replace(/[àáâãäå]/g, 'a')
            .replace(/[èéêë]/g, 'e')
            .replace(/[ìíîï]/g, 'i')
            .replace(/[òóôõö]/g, 'o')
            .replace(/[ùúûü]/g, 'u')
            .replace(/[ÿ]/g, 'y')
            .replace(/[ñ]/g, 'n')
            .replace(/[ç]/g, 'c')
            .replace(/[^\w\s-]/g, '') // Enlever les caractères non alphanumériques
            .replace(/[\s-]+/g, '_') // Remplacer espaces et tirets par underscores
            .replace(/^_+|_+$/g, ''); // Enlever les underscores en début/fin
        
        codeInput.value = slug;
    });
});
</script>
{% endblock %}