{% extends 'admin/base_layout.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex">
    <!-- Sidebar -->
    <div class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-lg transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 lg:static lg:inset-0" id="sidebar">
        <div class="flex items-center justify-center h-16 px-4 bg-indigo-600">
            <a href="{{ path('admin_dashboard') }}" class="flex items-center space-x-2">
                <img src="{{ asset('assets/logo sans fond.png') }}" alt="ZeTilt" class="h-8 w-auto">
                <span class="text-lg font-semibold text-white">ZeTilt CMS</span>
            </a>
        </div>
        
        <nav class="mt-8 flex-1 px-4 space-y-2">
            <!-- Dashboard -->
            <a href="{{ path('admin_dashboard') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_dashboard' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_dashboard' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v3H8V5z"></path>
                </svg>
                {{ 'navigation.dashboard'|trans({}, 'admin') }}
            </a>

            <!-- Content Management Section -->
            <div class="pt-4">
                <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">{{ 'sidebar.content_management'|trans({}, 'admin') }}</h3>
                <div class="mt-2 space-y-1">
                    <!-- Pages -->
                    <a href="{{ path('admin_pages_list') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_pages' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_pages' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        {{ 'breadcrumb.pages'|trans({}, 'pages') }}
                    </a>

                    {% if is_module_active('blog') %}
                    <!-- Blog/Articles -->
                    <a href="{{ path('admin_articles_list') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_articles' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_articles' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 01.707.293l4 4A1 1 0 0120 9v9a2 2 0 01-2 2z"></path>
                        </svg>
                        {{ 'breadcrumb.articles'|trans({}, 'articles') }}
                    </a>
                    {% endif %}

                    {% if is_module_active('gallery') %}
                    <!-- Galleries -->
                    <a href="{{ path('admin_galleries_list') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_galleries' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_galleries' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        {{ 'breadcrumb.galleries'|trans({}, 'galleries') }}
                    </a>
                    {% endif %}
                </div>
            </div>

            <!-- User Management Section -->
            {% if is_module_active('userplus') %}
            <div class="pt-4">
                <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">{{ 'sidebar.user_management'|trans({}, 'admin') }}</h3>
                <div class="mt-2 space-y-1">
                    <!-- Users -->
                    <a href="{{ path('admin_userplus_dashboard') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_userplus' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_userplus' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                        </svg>
                        {{ 'navigation.users'|trans({}, 'admin') }}
                    </a>

                    {% if is_module_active('registration') %}
                    <!-- Registrations -->
                    <a href="{{ path('admin_registration_dashboard') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_registration' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_registration' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                        </svg>
                        {{ 'title'|trans({}, 'registration') }}
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- Business Management Section -->
            <div class="pt-4">
                <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">{{ 'sidebar.business_management'|trans({}, 'admin') }}</h3>
                <div class="mt-2 space-y-1">
                    {% if is_module_active('events') %}
                    <!-- Events -->
                    <a href="{{ path('admin_events_list') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_events' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_events' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        {{ 'breadcrumb.events'|trans({}, 'events') }}
                    </a>
                    {% endif %}

                    {% if is_module_active('services') %}
                    <!-- Services -->
                    <a href="{{ path('admin_services_list') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_services' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_services' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                        {{ 'breadcrumb.services'|trans({}, 'services') }}
                    </a>
                    {% endif %}

                    {% if is_module_active('business') %}
                    <!-- Business -->
                    <a href="{{ path('admin_business_dashboard') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_business' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_business' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        {{ 'breadcrumb.business'|trans({}, 'business') }}
                    </a>
                    {% endif %}
                </div>
            </div>

            <!-- System Section -->
            <div class="pt-4">
                <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">{{ 'sidebar.system'|trans({}, 'admin') }}</h3>
                <div class="mt-2 space-y-1">
                    <!-- Translations -->
                    <a href="{{ path('admin_translation_dashboard') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_translation' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_translation' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                        </svg>
                        {{ 'navigation.translations'|trans({}, 'admin') }}
                    </a>

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <!-- Modules -->
                    <a href="{{ path('admin_modules') }}" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md {{ app.request.get('_route') starts with 'admin_modules' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' }}">
                        <svg class="mr-3 h-5 w-5 {{ app.request.get('_route') starts with 'admin_modules' ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                        {{ 'modules.title'|trans({}, 'admin') }}
                    </a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <!-- User Menu at bottom -->
        <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-200">
            <!-- Language Selector -->
            {% include 'components/language_selector.html.twig' %}
            
            <div class="mt-4 flex items-center">
                <img class="h-8 w-8 rounded-full" src="https://ui-avatars.com/api/?name={{ app.user.fullName|url_encode }}&background=6366f1&color=ffffff" alt="{{ app.user.fullName }}">
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-700">{{ app.user.fullName }}</p>
                    <div class="flex space-x-2">
                        <a href="{{ path('app_home') }}" class="text-xs text-gray-500 hover:text-gray-700">{{ 'navigation.view_site'|trans({}, 'admin') }}</a>
                        <span class="text-xs text-gray-300">â€¢</span>
                        <a href="{{ path('app_logout') }}" class="text-xs text-red-600 hover:text-red-700">{{ 'navigation.logout'|trans({}, 'admin') }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overlay for mobile -->
    <div class="fixed inset-0 z-40 bg-gray-600 bg-opacity-75 transition-opacity duration-300 ease-linear lg:hidden hidden" id="sidebar-overlay"></div>

    <!-- Main content -->
    <div class="flex flex-col w-0 flex-1">
        <!-- Top bar for mobile -->
        <div class="sticky top-0 z-10 flex-shrink-0 flex h-16 bg-white shadow lg:hidden">
            <button type="button" class="px-4 border-r border-gray-200 text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500 lg:hidden" id="mobile-sidebar-toggle">
                <span class="sr-only">{{ 'sidebar.open_sidebar'|trans({}, 'admin') }}</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
            <div class="flex-1 px-4 flex justify-between">
                <div class="flex-1 flex items-center">
                    <h1 class="text-lg font-semibold text-gray-900">ZeTilt CMS</h1>
                </div>
            </div>
        </div>

        <!-- Breadcrumbs -->
        {% block breadcrumbs %}
            <div class="bg-gray-50 border-b border-gray-200">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
                    <nav class="flex overflow-x-auto" aria-label="Breadcrumb">
                        <ol class="flex items-center space-x-2 sm:space-x-4 whitespace-nowrap">
                            <li>
                                <div>
                                    <a href="{{ path('admin_dashboard') }}" class="text-gray-400 hover:text-gray-500">
                                        <svg class="flex-shrink-0 h-4 w-4 sm:h-5 sm:w-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                                        </svg>
                                        <span class="sr-only">Home</span>
                                    </a>
                                </div>
                            </li>
                            {% block breadcrumb_items %}{% endblock %}
                        </ol>
                    </nav>
                </div>
            </div>
        {% endblock %}

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
                    <div class="rounded-md p-4 {{ type == 'error' ? 'bg-red-50 border border-red-200' : type == 'warning' ? 'bg-yellow-50 border border-yellow-200' : 'bg-green-50 border border-green-200' }}">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                {% if type == 'error' %}
                                    <svg class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                {% elseif type == 'warning' %}
                                    <svg class="h-5 w-5 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                                    </svg>
                                {% else %}
                                    <svg class="h-5 w-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                {% endif %}
                            </div>
                            <div class="ml-3">
                                <p class="text-sm {{ type == 'error' ? 'text-red-800' : type == 'warning' ? 'text-yellow-800' : 'text-green-800' }}">
                                    {{ message }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Main Content -->
        <main class="flex-1 relative overflow-y-auto focus:outline-none">
            {% block content %}{% endblock %}
        </main>
    </div>
</div>

<!-- Sidebar JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('sidebar-overlay');
    const mobileToggle = document.getElementById('mobile-sidebar-toggle');
    
    if (mobileToggle) {
        mobileToggle.addEventListener('click', function() {
            sidebar.classList.remove('-translate-x-full');
            overlay.classList.remove('hidden');
        });
    }
    
    if (overlay) {
        overlay.addEventListener('click', function() {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
        });
    }
});
</script>
{% endblock %}