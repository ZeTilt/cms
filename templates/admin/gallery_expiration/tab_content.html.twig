{% if galleries is empty %}
    <div class="text-center py-8 text-gray-500">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        {% if tab == 'expired' %}
            <p class="mt-2">{{ 'gallery_expiration.no_expired_galleries'|trans({}, 'admin') }}</p>
        {% elseif tab == 'expiring-soon' %}
            <p class="mt-2">{{ 'gallery_expiration.no_expiring_soon'|trans({}, 'admin') }}</p>
        {% else %}
            <p class="mt-2">{{ 'gallery_expiration.no_galleries_with_expiration'|trans({}, 'admin') }}</p>
        {% endif %}
    </div>
{% else %}
    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="relative w-12 px-6 sm:w-16 sm:px-8">
                        <!-- Checkbox column header -->
                    </th>
                    <th scope="col" class="min-w-0 py-3.5 pr-3 text-left text-sm font-semibold text-gray-900">
                        {{ 'fields.title'|trans({}, 'admin') }}
                    </th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                        {{ 'fields.author'|trans({}, 'admin') }}
                    </th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                        {{ 'fields.status'|trans({}, 'admin') }}
                    </th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                        Expiration
                    </th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                        <span class="sr-only">{{ 'actions.actions'|trans({}, 'admin') }}</span>
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
                {% for gallery in galleries %}
                    <tr class="hover:bg-gray-50">
                        <td class="relative w-12 px-6 sm:w-16 sm:px-8">
                            <input type="checkbox" class="gallery-checkbox absolute left-4 top-1/2 -mt-2 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" value="{{ gallery.id }}">
                        </td>
                        <td class="whitespace-nowrap py-4 pr-3 text-sm">
                            <div class="flex items-center">
                                <div class="h-10 w-10 flex-shrink-0">
                                    {% if gallery.coverImage %}
                                        <img class="h-10 w-10 rounded-lg object-cover" src="{{ gallery.coverImage }}" alt="{{ gallery.title }}">
                                    {% else %}
                                        <div class="h-10 w-10 rounded-lg bg-gray-200 flex items-center justify-center">
                                            <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="ml-4">
                                    <div class="font-medium text-gray-900">{{ gallery.title }}</div>
                                    <div class="text-gray-500">{{ gallery.images|length }} images</div>
                                </div>
                            </div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                            <div class="text-gray-900">{{ gallery.author.firstName }} {{ gallery.author.lastName }}</div>
                            <div class="text-gray-500">{{ gallery.author.email }}</div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                            {% if gallery.visibility == 'public' %}
                                <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">
                                    {{ 'status.published'|trans({}, 'admin') }}
                                </span>
                            {% elseif gallery.visibility == 'private' %}
                                <span class="inline-flex rounded-full bg-yellow-100 px-2 text-xs font-semibold leading-5 text-yellow-800">
                                    {{ 'status.private'|trans({}, 'admin') }}
                                </span>
                            {% else %}
                                <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">
                                    {{ 'status.hidden'|trans({}, 'admin') }}
                                </span>
                            {% endif %}
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                            {% if gallery.endDate %}
                                {% set daysRemaining = gallery.daysUntilExpiration %}
                                {% if daysRemaining <= 0 %}
                                    <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">
                                        {{ 'gallery_expiration.expired'|trans({}, 'admin') }}
                                    </span>
                                {% elseif daysRemaining <= 7 %}
                                    <span class="inline-flex rounded-full bg-yellow-100 px-2 text-xs font-semibold leading-5 text-yellow-800">
                                        {{ daysRemaining }} {{ 'gallery_expiration.days_remaining'|trans({}, 'admin') }}
                                    </span>
                                {% else %}
                                    <span class="inline-flex rounded-full bg-blue-100 px-2 text-xs font-semibold leading-5 text-blue-800">
                                        {{ daysRemaining }} {{ 'gallery_expiration.days_remaining'|trans({}, 'admin') }}
                                    </span>
                                {% endif %}
                                <div class="text-xs text-gray-400 mt-1">{{ gallery.endDate|date('d/m/Y H:i') }}</div>
                            {% else %}
                                <span class="text-gray-400">Permanent</span>
                            {% endif %}
                        </td>
                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                            <div class="flex items-center justify-end space-x-2">
                                {% if gallery.isExpired %}
                                    <button onclick="showReactivateModal({{ gallery.id }})" class="text-green-600 hover:text-green-900" title="{{ 'gallery_expiration.actions.reactivate'|trans({}, 'admin') }}">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                        </svg>
                                    </button>
                                {% else %}
                                    <button onclick="showExtendModal({{ gallery.id }})" class="text-indigo-600 hover:text-indigo-900" title="{{ 'gallery_expiration.actions.extend'|trans({}, 'admin') }}">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </button>
                                {% endif %}
                                <a href="{{ path('admin_galleries_show', {id: gallery.id}) }}" class="text-gray-600 hover:text-gray-900" title="{{ 'actions.view'|trans({}, 'admin') }}">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}