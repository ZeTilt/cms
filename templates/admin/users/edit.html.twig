{% extends 'admin/base.html.twig' %}

{% block page_title %}{{ isNew ? 'Nouvel Utilisateur' : 'Modifier Utilisateur' }}{% endblock %}

{% block breadcrumb_items %}
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <a href="{{ path('admin_users_list') }}" class="text-gray-500 hover:text-gray-700">Utilisateurs</a>
</li>
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <span class="text-gray-500">{{ isNew ? 'Nouveau' : 'Modifier' }}</span>
</li>
{% endblock %}

{% block content %}
<div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">
            {{ isNew ? 'Créer un nouvel utilisateur' : 'Modifier l\'utilisateur' }}
        </h2>
    </div>
    
    <form method="POST" class="p-6 space-y-6">
        <!-- Prénom -->
        <div>
            <label for="firstName" class="block text-sm font-medium text-gray-700">Prénom *</label>
            <div class="mt-1">
                <input type="text" 
                       name="firstName" 
                       id="firstName" 
                       value="{{ isNew ? '' : (user.firstName ?? '') }}"
                       required
                       class="shadow-sm focus:ring-club-orange focus:border-club-orange block w-full sm:text-sm border-gray-300 rounded-md"
                       placeholder="Prénom">
            </div>
        </div>

        <!-- Nom -->
        <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700">Nom *</label>
            <div class="mt-1">
                <input type="text" 
                       name="lastName" 
                       id="lastName" 
                       value="{{ isNew ? '' : (user.lastName ?? '') }}"
                       required
                       class="shadow-sm focus:ring-club-orange focus:border-club-orange block w-full sm:text-sm border-gray-300 rounded-md"
                       placeholder="Nom de famille">
            </div>
        </div>

        <!-- Email -->
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email *</label>
            <div class="mt-1">
                <input type="email" 
                       name="email" 
                       id="email" 
                       value="{{ isNew ? '' : (user.email ?? '') }}"
                       required
                       class="shadow-sm focus:ring-club-orange focus:border-club-orange block w-full sm:text-sm border-gray-300 rounded-md"
                       placeholder="email@exemple.com">
            </div>
        </div>

        <!-- Mot de passe -->
        <div>
            <label for="password" class="block text-sm font-medium text-gray-700">
                Mot de passe {{ isNew ? '*' : '(laisser vide pour ne pas changer)' }}
            </label>
            <div class="mt-1">
                <input type="password" 
                       name="password" 
                       id="password" 
                       {{ isNew ? 'required' : '' }}
                       class="shadow-sm focus:ring-club-orange focus:border-club-orange block w-full sm:text-sm border-gray-300 rounded-md"
                       placeholder="Mot de passe">
            </div>
            {% if not isNew %}
                <p class="mt-2 text-sm text-gray-500">
                    Laissez vide pour conserver le mot de passe actuel
                </p>
            {% endif %}
        </div>

        <!-- Niveau de plongée -->
        <div>
            <label for="diving_level" class="block text-sm font-medium text-gray-700">Niveau de plongée</label>
            <div class="mt-1">
                <select name="diving_level" 
                        id="diving_level"
                        class="shadow-sm focus:ring-club-orange focus:border-club-orange block w-full sm:text-sm border-gray-300 rounded-md">
                    <option value="">-- Sélectionner un niveau --</option>
                    <option value="bapteme" {{ (not isNew and user_diving_level == 'bapteme') ? 'selected' : '' }}>Baptême</option>
                    <option value="pe12" {{ (not isNew and user_diving_level == 'pe12') ? 'selected' : '' }}>PE12 (Plongeur Encadré 12m)</option>
                    <option value="pe20" {{ (not isNew and user_diving_level == 'pe20') ? 'selected' : '' }}>PE20 (Plongeur Encadré 20m)</option>
                    <option value="pe40" {{ (not isNew and user_diving_level == 'pe40') ? 'selected' : '' }}>PE40 (Plongeur Encadré 40m)</option>
                    <option value="pe60" {{ (not isNew and user_diving_level == 'pe60') ? 'selected' : '' }}>PE60 (Plongeur Encadré 60m)</option>
                    <option value="pa12" {{ (not isNew and user_diving_level == 'pa12') ? 'selected' : '' }}>PA12 (Plongeur Autonome 12m)</option>
                    <option value="pa20" {{ (not isNew and user_diving_level == 'pa20') ? 'selected' : '' }}>PA20 (Plongeur Autonome 20m)</option>
                    <option value="pa40" {{ (not isNew and user_diving_level == 'pa40') ? 'selected' : '' }}>PA40 (Plongeur Autonome 40m)</option>
                    <option value="pa60" {{ (not isNew and user_diving_level == 'pa60') ? 'selected' : '' }}>PA60 (Plongeur Autonome 60m)</option>
                    <option value="n1" {{ (not isNew and user_diving_level == 'n1') ? 'selected' : '' }}>N1 (Niveau 1)</option>
                    <option value="n2" {{ (not isNew and user_diving_level == 'n2') ? 'selected' : '' }}>N2 (Niveau 2)</option>
                    <option value="n3" {{ (not isNew and user_diving_level == 'n3') ? 'selected' : '' }}>N3 (Niveau 3)</option>
                    <option value="n4" {{ (not isNew and user_diving_level == 'n4') ? 'selected' : '' }}>N4 (Niveau 4)</option>
                    <option value="mf1" {{ (not isNew and user_diving_level == 'mf1') ? 'selected' : '' }}>MF1 (Moniteur Fédéral 1er degré)</option>
                    <option value="mf2" {{ (not isNew and user_diving_level == 'mf2') ? 'selected' : '' }}>MF2 (Moniteur Fédéral 2ème degré)</option>
                    <option value="e1" {{ (not isNew and user_diving_level == 'e1') ? 'selected' : '' }}>E1 (Encadrant niveau 1)</option>
                    <option value="e2" {{ (not isNew and user_diving_level == 'e2') ? 'selected' : '' }}>E2 (Encadrant niveau 2)</option>
                    <option value="e3" {{ (not isNew and user_diving_level == 'e3') ? 'selected' : '' }}>E3 (Encadrant niveau 3)</option>
                    <option value="e4" {{ (not isNew and user_diving_level == 'e4') ? 'selected' : '' }}>E4 (Encadrant niveau 4)</option>
                </select>
            </div>
            <p class="mt-1 text-sm text-gray-500">Niveau de certification FFESSM du plongeur</p>
        </div>

        <!-- Rôles -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">Rôles</label>
            <div class="space-y-2">
                <div class="flex items-center">
                    <input type="checkbox" 
                           name="roles[]" 
                           value="ROLE_ADMIN" 
                           id="role_admin"
                           {{ not isNew and 'ROLE_ADMIN' in user.roles ? 'checked' : '' }}
                           class="h-4 w-4 text-club-orange focus:ring-club-orange border-gray-300 rounded">
                    <label for="role_admin" class="ml-2 block text-sm text-gray-700">
                        <span class="font-medium">Administrateur</span>
                        <span class="text-gray-500">- Accès à l'administration du contenu</span>
                    </label>
                </div>
                
                <div class="flex items-center">
                    <input type="checkbox" 
                           name="roles[]" 
                           value="ROLE_SUPER_ADMIN" 
                           id="role_super_admin"
                           {{ not isNew and 'ROLE_SUPER_ADMIN' in user.roles ? 'checked' : '' }}
                           class="h-4 w-4 text-club-orange focus:ring-club-orange border-gray-300 rounded">
                    <label for="role_super_admin" class="ml-2 block text-sm text-gray-700">
                        <span class="font-medium">Super Administrateur</span>
                        <span class="text-gray-500">- Accès complet (utilisateurs, modules, configuration)</span>
                    </label>
                </div>
            </div>
            <p class="mt-2 text-sm text-gray-500">
                Le rôle "Utilisateur" est automatiquement attribué à tous les comptes.
            </p>
        </div>

        <!-- Actions -->
        <div class="flex justify-between pt-6 border-t border-gray-200">
            <a href="{{ path('admin_users_list') }}" 
               class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-club-orange">
                Annuler
            </a>
            
            <button type="submit" 
                    class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-club-orange hover:bg-club-orange-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-club-orange">
                {{ isNew ? 'Créer l\'utilisateur' : 'Sauvegarder les modifications' }}
            </button>
        </div>
    </form>
</div>
{% endblock %}