{% extends 'admin/base.html.twig' %}

{% block title %}Approbation des Utilisateurs - Admin{% endblock %}

{% block breadcrumb_items %}
    <li>
        <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="{{ path('admin_userplus_users') }}" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Utilisateurs</a>
        </div>
    </li>
    <li>
        <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-4 text-sm font-medium text-gray-500" aria-current="page">Approbations</span>
        </div>
    </li>
{% endblock %}

{% block content %}
<!-- Header -->
<div class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-4 sm:py-6 px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2 sm:space-x-4">
                <a href="{{ path('admin_userplus_users') }}" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">
                    Approbation des Utilisateurs
                </h1>
                {% if pending_users|length > 0 %}
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        {{ pending_users|length }} en attente
                    </span>
                {% endif %}
            </div>
        </div>
        <p class="mt-2 text-sm text-gray-600">
            Gérez les demandes d'inscription des nouveaux utilisateurs
        </p>
    </div>
</div>

<!-- Content -->
<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    {% if pending_users is empty %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune approbation en attente</h3>
            <p class="mt-1 text-sm text-gray-500">Tous les nouveaux utilisateurs ont été traités.</p>
            <div class="mt-6">
                <a href="{{ path('admin_userplus_users') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 6.292 21.057 21.057 0 005.13-2.17M15 8a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Voir tous les utilisateurs
                </a>
            </div>
        </div>
    {% else %}
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    Utilisateurs en attente d'approbation
                </h3>
                
                <div class="space-y-6">
                    {% for user in pending_users %}
                        <div class="bg-gray-50 rounded-lg p-6">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-4">
                                        <div class="flex-shrink-0">
                                            <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
                                                <span class="text-indigo-600 font-medium text-lg">
                                                    {{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}
                                                </span>
                                            </div>
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-lg font-medium text-gray-900">
                                                {{ user.fullName }}
                                            </h4>
                                            <p class="text-sm text-gray-500">{{ user.email }}</p>
                                            {% if user.userType %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mt-1">
                                                    {{ user.userType.name }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
                                        <div>
                                            <dt class="text-sm font-medium text-gray-500">Date d'inscription</dt>
                                            <dd class="mt-1 text-sm text-gray-900">{{ user.createdAt|date('d/m/Y à H:i') }}</dd>
                                        </div>
                                        {% if user.userType %}
                                            <div>
                                                <dt class="text-sm font-medium text-gray-500">Type d'utilisateur</dt>
                                                <dd class="mt-1 text-sm text-gray-900">{{ user.userType.displayName }}</dd>
                                            </div>
                                        {% endif %}
                                    </div>
                                    
                                    <!-- Attributs dynamiques si disponibles -->
                                    {% set attributes = user.dynamicAttributes %}
                                    {% if attributes is not empty %}
                                        <div class="mt-4">
                                            <dt class="text-sm font-medium text-gray-500 mb-2">Informations complémentaires</dt>
                                            <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
                                                {% for key, value in attributes %}
                                                    {% if value is not empty %}
                                                        <div>
                                                            <span class="text-sm font-medium text-gray-700">{{ key|title }}:</span>
                                                            <span class="text-sm text-gray-900 ml-1">{{ value }}</span>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <div class="flex-shrink-0 flex space-x-3">
                                    <!-- Bouton Approuver -->
                                    <form method="post" action="{{ path('admin_users_approve', {id: user.id}) }}" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('approve_user_' ~ user.id) }}">
                                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
                                                onclick="return confirm('Êtes-vous sûr de vouloir approuver cet utilisateur ?')">
                                            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            Approuver
                                        </button>
                                    </form>
                                    
                                    <!-- Bouton Rejeter -->
                                    <form method="post" action="{{ path('admin_users_reject', {id: user.id}) }}" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('reject_user_' ~ user.id) }}">
                                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                                                onclick="return confirm('Êtes-vous sûr de vouloir rejeter cet utilisateur ?')">
                                            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                            Rejeter
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}