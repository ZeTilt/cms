{% extends 'admin/base.html.twig' %}

{% block title %}Configuration API{% endblock %}

{% block breadcrumb_items %}
    <li>
        <div class="flex items-center">
            <svg class="flex-shrink-0 h-4 w-4 sm:h-5 sm:w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-2 sm:ml-4 text-sm font-medium text-gray-500">Configuration API</span>
        </div>
    </li>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Configuration des APIs</h1>
    </div>

    <!-- Configuration Prodigi -->
    <div class="bg-white rounded-lg shadow border mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-lg font-medium text-gray-900">API Prodigi - Impression Photo</h3>
                    <p class="text-sm text-gray-500 mt-1">Configuration pour les services d'impression Prodigi</p>
                </div>
                <div class="flex items-center space-x-2">
                    <div class="flex items-center space-x-2">
                        {% if prodigi_config.isConfigured and prodigi_config.isActive %}
                            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                            <span class="text-sm text-green-700">Configur√© et actif</span>
                        {% elseif prodigi_config.isConfigured %}
                            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                            <span class="text-sm text-yellow-700">Configur√© mais inactif</span>
                        {% else %}
                            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                            <span class="text-sm text-red-700">Non configur√©</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="p-6">
            <form id="prodigi-config-form" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="prodigi-api-key" class="block text-sm font-medium text-gray-700">Cl√© API Prodigi</label>
                        <input type="password" id="prodigi-api-key" name="api_key" 
                               class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                               value="{{ prodigi_config.apiKey ?: '' }}" 
                               placeholder="Votre cl√© API Prodigi">
                        <p class="mt-1 text-xs text-gray-500">
                            {% if prodigi_config.apiKey %}
                                Actuellement: {{ prodigi_config.maskedApiKey }}
                            {% else %}
                                Obtenez votre cl√© API sur dashboard.prodigi.com
                            {% endif %}
                        </p>
                    </div>
                    
                    <div>
                        <label for="prodigi-sandbox" class="block text-sm font-medium text-gray-700">Environnement des commandes</label>
                        <select id="prodigi-sandbox" name="is_sandbox" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                            <option value="1" {{ (prodigi_config.additionalConfig.sandbox ?? true) ? 'selected' : '' }}>Sandbox (Test)</option>
                            <option value="0" {{ not (prodigi_config.additionalConfig.sandbox ?? true) ? 'selected' : '' }}>Production</option>
                        </select>
                        <p class="mt-1 text-xs text-gray-500">
                            <strong>Commandes :</strong> Sandbox pour les tests, Production pour les vraies commandes<br>
                            <strong>Produits :</strong> Toujours r√©cup√©r√©s depuis l'API de production
                        </p>
                    </div>
                </div>

                <div>
                    <label for="prodigi-base-url" class="block text-sm font-medium text-gray-700">URL de l'API</label>
                    <input type="url" id="prodigi-base-url" name="base_url" 
                           class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                           value="{{ prodigi_config.baseUrl ?: 'https://api.sandbox.prodigi.com' }}" 
                           placeholder="https://api.sandbox.prodigi.com">
                    <p class="mt-1 text-xs text-gray-500">URL de l'API Prodigi (automatiquement d√©finie selon l'environnement)</p>
                </div>

                <div class="flex items-center">
                    <input type="checkbox" id="prodigi-is-active" name="is_active" 
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                           {{ prodigi_config.isActive ? 'checked' : '' }}>
                    <label for="prodigi-is-active" class="ml-2 block text-sm text-gray-900">
                        Activer l'API Prodigi
                    </label>
                </div>

                <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                    <div class="flex space-x-3">
                        <button type="button" id="test-prodigi-btn" class="bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-md transition-colors">
                            üß™ Tester la connexion
                        </button>
                        <button type="button" id="sync-prodigi-btn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition-colors">
                            üîÑ Synchroniser les produits
                        </button>
                    </div>
                    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md transition-colors">
                        üíæ Sauvegarder
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Guide d'obtention des cl√©s API -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <div class="flex items-start">
            <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">Comment obtenir votre cl√© API Prodigi ?</h3>
                <div class="mt-2 text-sm text-blue-700">
                    <ol class="list-decimal list-inside space-y-1">
                        <li>Visitez <a href="https://dashboard.prodigi.com" target="_blank" class="underline">dashboard.prodigi.com</a></li>
                        <li>Cr√©ez un compte gratuit ou connectez-vous</li>
                        <li>Acc√©dez √† la section "API Keys" dans votre dashboard</li>
                        <li>G√©n√©rez une nouvelle cl√© API</li>
                        <li>Configurez-la ici et testez la connexion</li>
                    </ol>
                </div>
                <div class="mt-3">
                    <p class="text-xs text-blue-600">
                        <strong>Note :</strong> Prodigi offre un acc√®s gratuit √† son API avec un environnement sandbox pour les tests. 
                        Aucun accord commercial pr√©alable n'est requis.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Configuration Prodigi
document.getElementById('prodigi-config-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalText = submitBtn.textContent;
    
    submitBtn.disabled = true;
    submitBtn.textContent = '‚è≥ Sauvegarde...';
    
    fetch('{{ path('admin_api_config_save_prodigi') }}', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('‚úÖ ' + data.message);
            location.reload();
        } else {
            alert('‚ùå ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('‚ùå Erreur lors de la sauvegarde');
    })
    .finally(() => {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
    });
});

// Test de connexion Prodigi
document.getElementById('test-prodigi-btn').addEventListener('click', function() {
    const apiKey = document.getElementById('prodigi-api-key').value;
    const isSandbox = document.getElementById('prodigi-sandbox').value;
    
    if (!apiKey) {
        alert('‚ö†Ô∏è Veuillez remplir la cl√© API avant de tester');
        return;
    }
    
    const btn = this;
    const originalText = btn.textContent;
    btn.disabled = true;
    btn.textContent = '‚è≥ Test en cours...';
    
    const formData = new FormData();
    formData.append('api_key', apiKey);
    formData.append('is_sandbox', isSandbox);
    
    fetch('{{ path('admin_api_config_test_prodigi') }}', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('‚úÖ ' + data.message + '\n\nVersion API: ' + (data.data.api_version || 'inconnue'));
        } else {
            alert('‚ùå ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('‚ùå Erreur lors du test de connexion');
    })
    .finally(() => {
        btn.disabled = false;
        btn.textContent = originalText;
    });
});

// Synchronisation Prodigi
document.getElementById('sync-prodigi-btn').addEventListener('click', function() {
    if (!confirm('üîÑ Voulez-vous synchroniser les produits Prodigi ?\n\nCela peut prendre quelques secondes...')) {
        return;
    }
    
    const btn = this;
    const originalText = btn.textContent;
    btn.disabled = true;
    btn.textContent = '‚è≥ Synchronisation...';
    
    fetch('{{ path('admin_api_config_sync_prodigi') }}', {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('‚úÖ ' + data.message);
        } else {
            alert('‚ùå ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('‚ùå Erreur lors de la synchronisation');
    })
    .finally(() => {
        btn.disabled = false;
        btn.textContent = originalText;
    });
});
</script>
{% endblock %}