{% extends 'admin/base.html.twig' %}

{% block title %}EAV Demo - ZeTilt CMS{% endblock %}

{% block content %}
<div class="w-[95%] mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">EAV System Demo</h1>
        <p class="mt-1 text-sm text-gray-500">Demonstration of dynamic attributes for different entities</p>
    </div>

    <!-- Demo User Entity -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Demo User with Dynamic Attributes</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Basic User Info -->
            <div>
                <h3 class="text-lg font-medium text-gray-800 mb-3">Basic Information</h3>
                <div class="space-y-2">
                    <p><strong>Name:</strong> {{ demoUser.firstName }} {{ demoUser.lastName }}</p>
                    <p><strong>Email:</strong> {{ demoUser.email }}</p>
                    <p><strong>Created:</strong> {{ demoUser.createdAt|date('d/m/Y H:i') }}</p>
                </div>
            </div>

            <!-- EAV Attributes -->
            <div>
                <h3 class="text-lg font-medium text-gray-800 mb-3">Dynamic Attributes</h3>
                {% set userAttributes = eav_all('User', demoUser.id) %}
                {% if userAttributes is not empty %}
                    <div class="space-y-2">
                        {% for attributeName, attribute in userAttributes %}
                            <div class="flex justify-between">
                                <span class="text-gray-600">{{ attributeName|title }}:</span>
                                <span class="font-medium">{{ eav_display('User', demoUser.id, attributeName) }}</span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 italic">No dynamic attributes defined for User</p>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- All Entity Types with EAV Attributes -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for entityType, entityLabel in supportedEntities %}
            <div class="bg-white shadow rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">{{ entityLabel }}</h3>
                
                {% set definitions = eav_definitions(entityType) %}
                {% if definitions is not empty %}
                    <div class="space-y-2">
                        <p class="text-sm text-gray-600 mb-2">Defined Attributes:</p>
                        {% for definition in definitions %}
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-gray-700">{{ definition.displayName }}</span>
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                    {{ supportedTypes[definition.attributeType].label }}
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 text-sm italic">No attributes defined</p>
                {% endif %}

                <div class="mt-4">
                    <a href="{{ path('admin_attributes_entity', {entityType: entityType}) }}" 
                       class="inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-indigo-600 hover:text-indigo-800">
                        Manage Attributes
                        <svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Usage Examples -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h3 class="text-lg font-medium text-blue-800 mb-4">EAV System Usage Examples</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h4 class="font-medium text-blue-700 mb-2">Twig Functions:</h4>
                <div class="bg-white p-3 rounded border text-sm font-mono">
                    <div class="mb-2">{{ '{{ eav_get("User", user.id, "certification_level") }}' }}</div>
                    <div class="mb-2">{{ '{{ eav_has("User", user.id, "medical_certificate") }}' }}</div>
                    <div class="mb-2">{{ '{{ eav_display("User", user.id, "birth_date", {date_format: "d/m/Y"}) }}' }}</div>
                    <div>{{ '{{ eav_all("User", user.id) }}' }}</div>
                </div>
            </div>

            <div>
                <h4 class="font-medium text-blue-700 mb-2">Form Integration:</h4>
                <div class="bg-white p-3 rounded border text-sm font-mono">
                    <div class="mb-2">// In controller:</div>
                    <div class="mb-2">$formBuilder = $this->createFormBuilder();</div>
                    <div class="mb-2">$eavFormBuilder->addEavFields($formBuilder, 'User', $user);</div>
                    <div>$form = $formBuilder->getForm();</div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <h4 class="font-medium text-blue-700 mb-2">Attribute Types Supported:</h4>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
                {% for typeKey, typeInfo in supportedTypes %}
                    <div class="bg-white px-2 py-1 rounded border text-sm">
                        <strong>{{ typeInfo.label }}</strong><br>
                        <span class="text-gray-600 text-xs">{{ typeInfo.description }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}