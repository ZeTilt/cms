{% endblock %}

{% block content %}
<!-- Header -->
<div class="bg-white shadow">
    <div class="w-[95%] mx-auto py-4 sm:py-6 px-4 sm:px-6 lg:px-8">
        <div class="flex items-center space-x-2 sm:space-x-4">
            <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">
                {{ 'modules.title'|trans({}, 'admin') }}
            </h1>
        </div>
        <p class="mt-2 text-sm text-gray-600">
            Activez ou d√©sactivez les modules pour contr√¥ler quelles fonctionnalit√©s sont disponibles dans le CMS.
        </p>
    </div>
</div>

<!-- Content -->
<div class="w-[95%] mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="space-y-6">
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">

                    {% set contentModules = [] %}
                    {% set businessModules = [] %}
                    {% set userModules = [] %}
                    {% set systemModules = [] %}
                    
                    {% for moduleData in modules_with_dependencies %}
                        {% set module = moduleData.module %}
                        {% if module.name in ['blog', 'gallery'] %}
                            {% set contentModules = contentModules|merge([moduleData]) %}
                        {% elseif module.name in ['events', 'services', 'business', 'shop'] %}
                            {% set businessModules = businessModules|merge([moduleData]) %}
                        {% elseif module.name in ['userplus', 'registration'] %}
                            {% set userModules = userModules|merge([moduleData]) %}
                        {% else %}
                            {% set systemModules = systemModules|merge([moduleData]) %}
                        {% endif %}
                    {% endfor %}

                    <!-- L√©gende des d√©pendances -->
                    <div class="bg-gray-50 rounded-lg p-4 mb-4">
                        <h4 class="text-sm font-medium text-gray-900 mb-2">üí° L√©gende des D√©pendances</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-xs">
                            <div class="space-y-2">
                                <div class="flex items-center space-x-2">
                                    <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">d√©pend de</span>
                                    <span class="text-gray-600">Ce module n√©cessite un autre module</span>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-orange-100 text-orange-800">requis par</span>
                                    <span class="text-gray-600">D'autres modules ont besoin de celui-ci</span>
                                </div>
                            </div>
                            <div class="space-y-2">
                                <div class="flex items-center space-x-2">
                                    <div class="w-4 h-4 bg-green-500 rounded"></div>
                                    <span class="text-gray-600">Module actif</span>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <div class="w-4 h-4 bg-red-400 rounded"></div>
                                    <span class="text-gray-600">D√©pendances manquantes</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="space-y-3">
                        
                        <!-- Content Management Section -->
                        {% if contentModules|length > 0 %}
                        <div>
                            <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-1">üìÑ Gestion de Contenu</h3>
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-2">
                                {% for moduleData in contentModules %}
                                    {{ _self.module_item(moduleData) }}
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        <!-- Business Section -->
                        {% if businessModules|length > 0 %}
                        <div>
                            <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-1">üè¢ Modules Business</h3>
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-2">
                                {% for moduleData in businessModules %}
                                    {{ _self.module_item(moduleData) }}
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        <!-- User Management Section -->
                        {% if userModules|length > 0 %}
                        <div>
                            <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-1">üë• Gestion Utilisateurs</h3>
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-2">
                                {% for moduleData in userModules %}
                                    {{ _self.module_item(moduleData) }}
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        <!-- System Section -->
                        {% if systemModules|length > 0 %}
                        <div>
                            <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-1">‚öôÔ∏è Syst√®me & Configuration</h3>
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-2">
                                {% for moduleData in systemModules %}
                                    {{ _self.module_item(moduleData) }}
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                    </div>

{% macro module_item(moduleData) %}
{% set module = moduleData.module %}
