{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'modules.title'|trans({}, 'admin') }} - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/modules.css') }}">
{% endblock %}

{% block breadcrumb_items %}
