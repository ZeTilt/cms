                    </svg>
                {% elseif module.name == 'blog' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                {% elseif module.name == 'userplus' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                    </svg>
                {% elseif module.name == 'events' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                {% elseif module.name == 'image_security' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                {% elseif module.name == 'services' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 00-2 2H6a2 2 0 00-2-2V4m8 0h2a2 2 0 012 2v6.5"></path>
                    </svg>
                {% elseif module.name == 'registration' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                {% elseif module.name == 'translation' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                    </svg>
                {% elseif module.name == 'business' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                {% elseif module.name == 'shop' %}
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m.6 0L5 3H3m4 10v6a1 1 0 001 1h10a1 1 0 001-1v-6M9 19v2m6-2v2"></path>
                    </svg>
                {% else %}
                    <span class="text-white font-medium text-xs">{{ module.name|slice(0, 2)|upper }}</span>
                {% endif %}
            </div>
            <div class="min-w-0 flex-1">
                <p class="text-sm font-medium text-gray-900">{{ module.displayName }}</p>
                <p class="text-xs text-gray-500 truncate">{{ module.description ?: 'Aucune description' }}</p>
                
                {# Affichage des d√©pendances #}
                {% if moduleData.dependencies|length > 0 %}
                    <div class="mt-1 flex items-center space-x-1">
                        <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                        </svg>
                        <span class="text-xs text-gray-400">D√©pend de:</span>
                        {% for dep in moduleData.dependencies %}
                            <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                {{ dep }}
                            </span>
                        {% endfor %}
                    </div>
                {% endif %}
                
                {# Affichage des modules d√©pendants #}
                {% if moduleData.dependent_modules|length > 0 %}
                    <div class="mt-1 flex items-center space-x-1">
                        <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <span class="text-xs text-gray-400">Requis par:</span>
                        {% for depModule in moduleData.dependent_modules %}
                            <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-orange-100 text-orange-800">
                                {{ depModule.displayName }}
                            </span>
                        {% endfor %}
                    </div>
                {% endif %}
                
                {# Erreurs d'activation #}
                {% if not moduleData.can_activate and not module.active %}
                    <div class="mt-1 flex items-center space-x-1">
                        <svg class="w-3 h-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-xs text-red-600">{{ moduleData.activation_errors|first }}</span>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="flex items-center space-x-1">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium {{ module.active ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600' }}">
                {{ module.active ? 'Actif' : 'Inactif' }}
            </span>
            {% if module.active %}
                <button 
                    type="button"
                    class="p-1 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded transition-colors {{ moduleData.dependent_modules|length > 0 ? 'opacity-50 cursor-not-allowed' : '' }}"
                    onclick="toggleModule('{{ module.name }}', false)"
                    data-module="{{ module.name }}"
                    data-action="deactivate"
                    title="{% if moduleData.dependent_modules|length > 0 %}Impossible de d√©sactiver : requis par d'autres modules{% else %}D√©sactiver le module{% endif %}"
                    {% if moduleData.dependent_modules|length > 0 %}disabled{% endif %}
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            {% else %}
                <button 
                    type="button"
                    class="p-1 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded transition-colors {{ not moduleData.can_activate ? 'opacity-50 cursor-not-allowed' : '' }}"
                    onclick="toggleModule('{{ module.name }}', true)"
                    data-module="{{ module.name }}"
                    data-action="activate"
                    title="{% if not moduleData.can_activate %}{{ moduleData.activation_errors|first }}{% else %}Activer le module{% endif %}"
                    {% if not moduleData.can_activate %}disabled{% endif %}
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </button>
            {% endif %}
        </div>
    </div>
</div>
{% endmacro %}
            </div>
        </div>
    </div>
</div>

<!-- Clean Module Management Script -->
<script>
function toggleModule(moduleName, activate) {
    const action = activate ? 'activate' : 'deactivate';
    
    // V√©rifier si le bouton est d√©sactiv√©
    const button = event.target.closest('button');
    if (button && button.disabled) {
        return;
    }
    
    if (!confirm(`√ätes-vous s√ªr de vouloir ${action === 'activate' ? 'activer' : 'd√©sactiver'} le module ${moduleName} ?`)) {
        return;
    }
    
    // Disable all buttons during request
    const buttons = document.querySelectorAll('button[data-module]');
    buttons.forEach(btn => {
        btn.disabled = true;
        btn.classList.add('opacity-50');
    });
    
    const formData = new FormData();
    formData.append('action', action);
    
    fetch(`/admin/modules/${moduleName}/toggle`, {
        method: 'POST',
        body: formData,
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success message
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-green-500 text-white p-4 rounded-md shadow-lg z-50';
            notification.textContent = data.message;
            document.body.appendChild(notification);
            
            // Reload page after short delay
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            alert('{{ 'errors.operation_error'|trans({}, 'admin') }} ' + (data.message || '{{ 'errors.unknown_error'|trans({}, 'admin') }}'));
            // Re-enable buttons
            buttons.forEach(btn => {
                btn.disabled = false;
                btn.classList.remove('opacity-50');
            });
        }
    })
    .catch(error => {
        alert('Erreur r√©seau: ' + error.message);
        // Re-enable buttons
        buttons.forEach(btn => {
            btn.disabled = false;
            btn.classList.remove('opacity-50');
        });
    });
}
</script>
