{% extends 'admin/base.html.twig' %}

{% block page_title %}Créer un menu{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('admin_menus_index') }}" class="text-gray-600 hover:text-gray-800">
            ← Retour aux menus
        </a>
    </div>

    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Nouveau menu</h3>
        </div>

        <form action="{{ path('admin_menus_create') }}" method="POST" class="p-6 space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                    Nom du menu
                </label>
                <input type="text"
                       id="name"
                       name="name"
                       required
                       placeholder="Ex: Menu Principal"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-club-orange focus:border-club-orange">
                <p class="mt-1 text-sm text-gray-500">
                    Nom affiché dans l'administration.
                </p>
            </div>

            <div>
                <label for="location" class="block text-sm font-medium text-gray-700 mb-1">
                    Identifiant (location)
                </label>
                <input type="text"
                       id="location"
                       name="location"
                       required
                       placeholder="Ex: main"
                       pattern="[a-z0-9_-]+"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-club-orange focus:border-club-orange">
                <p class="mt-1 text-sm text-gray-500">
                    Identifiant unique (lettres minuscules, chiffres, tirets).
                    Utilisé dans le code pour afficher le menu.
                </p>
            </div>

            <div class="bg-gray-50 -mx-6 -mb-6 px-6 py-4 mt-6 flex justify-end space-x-3">
                <a href="{{ path('admin_menus_index') }}"
                   class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Annuler
                </a>
                <button type="submit"
                        class="px-4 py-2 bg-club-orange text-white rounded-md hover:bg-club-orange-dark">
                    Créer le menu
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
