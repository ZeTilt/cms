{% extends 'admin/base.html.twig' %}

{% block title %}Attributs de {{ user.fullName ?? 'Utilisateur' }}{% endblock %}

{% block body %}
<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">Attributs de {{ user.fullName ?? 'Utilisateur' }}</h1>
                <p class="mt-1 text-sm text-gray-600">{{ user.email }}</p>
            </div>
            <a href="{{ path('admin_user_attributes_index') }}" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                ← Retour à la liste
            </a>
        </div>
    </div>

    <div class="p-6">
        <!-- Messages flash -->
        {% for flash_error in app.flashes('error') %}
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                {{ flash_error }}
            </div>
        {% endfor %}

        {% for flash_success in app.flashes('success') %}
            <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                {{ flash_success }}
            </div>
        {% endfor %}

        <!-- Attributs existants -->
        {% if attributes is not empty %}
            <div class="mb-8">
                <h2 class="text-lg font-medium text-gray-900 mb-4">Attributs configurés</h2>
                <div class="grid gap-4 md:grid-cols-2">
                    {% for attributeName, attribute in attributes %}
                        <div class="bg-gray-50 rounded-lg p-4">
                            <div class="flex items-center justify-between">
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-900">
                                        {% set config = availableAttributes[attributeName] %}
                                        {{ config.label ?? (attributeName | title) }}
                                    </h3>
                                    <div class="mt-1 text-sm text-gray-600">
                                        {% if config and config.type == 'select' and config.options %}
                                            {{ config.options[attribute.attributeValue] ?? attribute.attributeValue }}
                                        {% else %}
                                            {{ attribute.attributeValue }}
                                        {% endif %}
                                    </div>
                                    <div class="mt-1 text-xs text-gray-400">
                                        Modifié le {{ attribute.updatedAt|date('d/m/Y à H:i') }}
                                    </div>
                                </div>
                                <form method="post" action="{{ path('admin_user_attributes_delete', {id: attribute.id}) }}" 
                                      class="inline" onsubmit="return confirm('Supprimer cet attribut ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_attribute_' ~ attribute.id) }}">
                                    <button type="submit" class="text-red-600 hover:text-red-800">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <!-- Formulaire d'ajout -->
        <div class="border-t border-gray-200 pt-8">
            <h2 class="text-lg font-medium text-gray-900 mb-4">Ajouter un attribut</h2>
            
            <form method="post" class="space-y-6">
                <div class="grid gap-6 md:grid-cols-2">
                    <div>
                        <label for="attribute_name" class="block text-sm font-medium text-gray-700 mb-2">
                            Attribut
                        </label>
                        <select name="attribute_name" id="attribute_name" required 
                                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-club-orange focus:ring-club-orange"
                                onchange="updateAttributeForm()">
                            <option value="">Choisir un attribut...</option>
                            {% for key, config in availableAttributes %}
                                <option value="{{ key }}" 
                                        data-type="{{ config.type }}" 
                                        data-options="{{ config.options is defined ? config.options|json_encode|e('html_attr') : '' }}">
                                    {{ config.label }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label for="attribute_value" class="block text-sm font-medium text-gray-700 mb-2">
                            Valeur
                        </label>
                        <div id="value-container">
                            <input type="text" name="attribute_value" id="attribute_value" required 
                                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-club-orange focus:ring-club-orange"
                                   placeholder="Saisir la valeur...">
                        </div>
                    </div>
                </div>

                <div class="flex justify-end space-x-3">
                    <button type="submit" 
                            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-club-orange hover:bg-club-orange-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-club-orange">
                        Ajouter l'attribut
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function updateAttributeForm() {
    const select = document.getElementById('attribute_name');
    const container = document.getElementById('value-container');
    const option = select.options[select.selectedIndex];
    
    if (!option.value) {
        container.innerHTML = `
            <input type="text" name="attribute_value" id="attribute_value" required 
                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-club-orange focus:ring-club-orange"
                   placeholder="Saisir la valeur...">
        `;
        return;
    }
    
    const type = option.dataset.type;
    const options = option.dataset.options ? JSON.parse(option.dataset.options) : null;
    
    if (type === 'select' && options) {
        let html = `
            <select name="attribute_value" id="attribute_value" required 
                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-club-orange focus:ring-club-orange">
                <option value="">Choisir une valeur...</option>
        `;
        
        for (const [key, label] of Object.entries(options)) {
            html += `<option value="${key}">${label}</option>`;
        }
        
        html += '</select>';
        container.innerHTML = html;
    } else if (type === 'date') {
        container.innerHTML = `
            <input type="date" name="attribute_value" id="attribute_value" required 
                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-club-orange focus:ring-club-orange">
        `;
    } else if (type === 'tel') {
        container.innerHTML = `
            <input type="tel" name="attribute_value" id="attribute_value" required 
                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-club-orange focus:ring-club-orange"
                   placeholder="Ex: 06 12 34 56 78">
        `;
    } else {
        container.innerHTML = `
            <input type="text" name="attribute_value" id="attribute_value" required 
                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-club-orange focus:ring-club-orange"
                   placeholder="Saisir la valeur...">
        `;
    }
}
</script>
{% endblock %}