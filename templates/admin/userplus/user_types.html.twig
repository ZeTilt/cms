{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'user_types.title'|trans({}, 'userplus') }} - ZeTilt CMS{% endblock %}

{% block content %}
<!-- Header -->
<div class="bg-white shadow">
    <div class="w-[95%] mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
            <div>
                <nav class="flex" aria-label="Breadcrumb">
                    <ol role="list" class="flex items-center space-x-4">
                        <li>
                            <a href="{{ path('admin_userplus_dashboard') }}" class="text-gray-400 hover:text-gray-500">
                                {{ 'title'|trans({}, 'userplus') }}
                            </a>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                <span class="ml-4 text-sm font-medium text-gray-500">Types d'Utilisateurs</span>
                            </div>
                        </li>
                    </ol>
                </nav>
                <h1 class="mt-2 text-3xl font-bold text-gray-900">Types d'Utilisateurs</h1>
                <p class="mt-1 text-sm text-gray-500">Définissez les types d'utilisateurs et leurs attributs personnalisés</p>
            </div>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <div class="flex space-x-3">
                    <a href="{{ path('admin_userplus_user_types_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        {{ 'user_types.new_type'|trans({}, 'userplus') }}
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Main content -->
<div class="w-[95%] mx-auto py-6 px-4 sm:px-6 lg:px-8">
    {% if userTypes is empty %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">{{ 'user_types.no_types'|trans({}, 'userplus') }}</h3>
            <p class="mt-1 text-sm text-gray-500">Commencez par créer votre premier type d'utilisateur.</p>
            <div class="mt-6">
                <a href="{{ path('admin_userplus_user_types_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    {{ 'user_types.new_type'|trans({}, 'userplus') }}
                </a>
            </div>
        </div>
    {% else %}
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Statut
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Type d'utilisateur
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Description
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Utilisateurs
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Attributs
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for userType in userTypes %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-2 h-2 rounded-full {{ userType.active ? 'bg-green-400' : 'bg-red-400' }}"></div>
                                    <span class="ml-2 text-sm text-gray-500">
                                        {{ userType.active ? 'Actif' : 'Inactif' }}
                                    </span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ userType.displayName }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ userType.name }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                {% if userType.description %}
                                    <div class="text-sm text-gray-900 max-w-xs truncate">
                                        {{ userType.description }}
                                    </div>
                                {% else %}
                                    <span class="text-sm text-gray-500">-</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ userType.userCount }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ userType.attributes.count }}
                                {% if userType.requiredAttributes.count > 0 %}
                                    <span class="text-gray-400">({{ userType.requiredAttributes.count }} requis)</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <div class="flex justify-end space-x-2">
                                        <a href="{{ path('admin_userplus_user_type_attributes', {id: userType.id}) }}" class="text-blue-600 hover:text-blue-900" title="Attributs">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                            </svg>
                                        </a>
                                        <a href="{{ path('admin_userplus_user_types_edit', {id: userType.id}) }}" class="text-indigo-600 hover:text-indigo-900" title="Modifier">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </a>
                                    </div>
                                {% else %}
                                    <span class="text-sm text-gray-400">Lecture seule</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}