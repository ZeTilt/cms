{% extends 'admin/base.html.twig' %}

{% block page_title %}Gestion des √âv√©nements{% endblock %}

{% block page_actions %}
<a href="{{ path('admin_events_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-club-orange hover:bg-club-orange-dark">
    <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
    </svg>
    Nouvel √âv√©nement
</a>
{% endblock %}

{% block breadcrumb_items %}
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <span class="text-gray-500">√âv√©nements</span>
</li>
{% endblock %}

{% block content %}
<div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h2 class="text-lg font-medium text-gray-900">Tous les √âv√©nements</h2>
            <div class="flex items-center space-x-4">
                <label class="flex items-center cursor-pointer">
                    <input type="checkbox"
                           id="show_all"
                           {{ showAll ? 'checked' : '' }}
                           onchange="window.location.href = this.checked ? '{{ path('admin_events_list', {show_all: 1}) }}' : '{{ path('admin_events_list') }}'"
                           class="h-4 w-4 text-club-orange focus:ring-club-orange border-gray-300 rounded">
                    <span class="ml-2 text-sm text-gray-700">Afficher toutes les occurrences</span>
                </label>
                <span class="text-sm text-gray-500">{{ events|length }} √©v√©nement(s)</span>
            </div>
        </div>
    </div>

    {% if events is empty %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">Aucun √©v√©nement</h3>
            <p class="mt-1 text-sm text-gray-500">Commencez par cr√©er votre premier √©v√©nement.</p>
            <div class="mt-6">
                <a href="{{ path('admin_events_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-club-orange hover:bg-club-orange-dark">
                    <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Nouvel √âv√©nement
                </a>
            </div>
        </div>
    {% else %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            √âv√©nement
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Date/Heure
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Type
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Participants
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            RDV/Niveau
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Statut
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for event in events %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 w-3 h-3 rounded-full mr-3" style="background-color: {{ event.color ?? '#FD7E29' }}"></div>
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ event.title }}
                                            {% if event.isRecurring %}
                                                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                                    üîÑ R√©current ({{ event.generatedEvents|length + 1 }})
                                                </span>
                                            {% elseif event.isGeneratedEvent %}
                                                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                                    üìÖ S√©rie
                                                </span>
                                            {% endif %}
                                        </div>
                                        {% if event.location %}
                                            <div class="text-sm text-gray-500">üìç {{ event.location }}</div>
                                        {% endif %}
                                        {% if event.isGeneratedEvent %}
                                            <div class="text-xs text-gray-400 mt-1">
                                                S√©rie: <a href="{{ path('admin_events_edit', {id: event.parentEvent.id}) }}" class="text-blue-600 hover:text-blue-900">{{ event.parentEvent.title }}</a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ event.startDate|date('d/m/Y √† H:i') }}</div>
                                {% if event.endDate %}
                                    <div class="text-sm text-gray-500">‚Üí {{ event.endDate|date('d/m/Y √† H:i') }}</div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                      style="background-color: {{ event.color ?? '#FD7E29' }}1A; color: {{ event.color ?? '#FD7E29' }}">
                                    {{ event.typeDisplayName }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {% if event.maxParticipants %}
                                    <div class="flex items-center">
                                        <span class="mr-2">{{ event.currentParticipants }}/{{ event.maxParticipants }}</span>
                                        <div class="flex-1 bg-gray-200 rounded-full h-2 w-16">
                                            {% set percentage = event.maxParticipants > 0 ? (event.currentParticipants / event.maxParticipants * 100) : 0 %}
                                            <div class="bg-club-orange h-2 rounded-full" style="width: {{ percentage }}%"></div>
                                        </div>
                                    </div>
                                    {% if event.waitingListCount > 0 %}
                                        <div class="text-xs text-yellow-600 mt-1">
                                            + {{ event.waitingListCount }} en attente
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <span class="text-gray-400">Libre</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <div class="space-y-1">
                                    {% if event.clubMeetingTime %}
                                        <div class="flex items-center">
                                            <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-blue-100 text-blue-800">
                                                üè† {{ event.clubMeetingTime|date('H:i') }}
                                            </span>
                                            <span class="ml-1 text-xs text-gray-500">
                                                ({{ event.clubMeetingParticipants|length }})
                                            </span>
                                        </div>
                                    {% endif %}
                                    {% if event.siteMeetingTime %}
                                        <div class="flex items-center">
                                            <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-green-100 text-green-800">
                                                üåä {{ event.siteMeetingTime|date('H:i') }}
                                            </span>
                                            <span class="ml-1 text-xs text-gray-500">
                                                ({{ event.siteMeetingParticipants|length }})
                                            </span>
                                        </div>
                                    {% endif %}
                                    {% if event.minDivingLevel %}
                                        <div class="text-xs text-gray-600">
                                            Min: {{ event.minDivingLevel.name }}
                                        </div>
                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if event.status == 'active' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        Actif
                                    </span>
                                {% elseif event.status == 'cancelled' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                        Annul√©
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        {{ event.statusDisplayName }}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end space-x-2">
                                    <a href="{{ path('calendar_event_detail', {id: event.id}) }}" 
                                       class="text-club-blue hover:text-club-blue-dark" 
                                       target="_blank"
                                       title="Voir sur le site">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M14 4h6m0 0v6m0-6L10 14"/>
                                        </svg>
                                    </a>
                                    <a href="{{ path('admin_events_edit', {id: event.id}) }}" 
                                       class="text-gray-600 hover:text-gray-900"
                                       title="Modifier">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                    </a>
                                    
                                    <!-- Boutons de suppression avec ic√¥nes et tooltips -->
                                    {% if event.isGeneratedEvent %}
                                        <!-- Occurrence d'une s√©rie r√©currente : 3 actions possibles -->

                                        <!-- Supprimer uniquement cette occurrence -->
                                        <a href="{{ path('admin_events_delete', {id: event.id}) }}"
                                           class="text-gray-600 hover:text-gray-900"
                                           title="Supprimer uniquement cette occurrence"
                                           onclick="return confirm('Supprimer uniquement cette occurrence ?')">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                        </a>

                                        <!-- Supprimer √† partir de cette occurrence -->
                                        <a href="{{ path('admin_events_delete_from', {id: event.id}) }}"
                                           class="text-orange-600 hover:text-orange-900"
                                           title="Supprimer √† partir de cette occurrence (inclus les suivantes)"
                                           onclick="return confirm('Supprimer cette occurrence et toutes les suivantes ?')">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                                            </svg>
                                        </a>

                                        <!-- Supprimer toute la s√©rie -->
                                        <a href="{{ path('admin_events_delete_series', {id: event.parentEvent.id}) }}"
                                           class="text-red-600 hover:text-red-900"
                                           title="Supprimer toute la s√©rie r√©currente"
                                           onclick="return confirm('Supprimer toute la s√©rie r√©currente ?')">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </a>

                                    {% elseif event.isRecurring and event.generatedEvents|length > 0 %}
                                        <!-- √âv√©nement parent r√©current : 2 actions possibles -->

                                        <!-- Supprimer uniquement le parent -->
                                        <a href="{{ path('admin_events_delete', {id: event.id}) }}"
                                           class="text-gray-600 hover:text-gray-900"
                                           title="Supprimer uniquement cet √©v√©nement parent"
                                           onclick="return confirm('Supprimer uniquement cet √©v√©nement parent ?')">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                        </a>

                                        <!-- Supprimer toute la s√©rie -->
                                        <a href="{{ path('admin_events_delete_series', {id: event.id}) }}"
                                           class="text-red-600 hover:text-red-900"
                                           title="Supprimer toute la s√©rie ({{ event.generatedEvents|length + 1 }} √©v√©nements)"
                                           onclick="return confirm('Supprimer toute la s√©rie r√©currente ({{ event.generatedEvents|length + 1 }} √©v√©nements) ?')">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </a>

                                    {% else %}
                                        <!-- √âv√©nement simple : 1 action de suppression -->
                                        <a href="{{ path('admin_events_delete', {id: event.id}) }}"
                                           class="text-red-600 hover:text-red-900"
                                           title="Supprimer cet √©v√©nement"
                                           onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cet √©v√©nement ?')">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}