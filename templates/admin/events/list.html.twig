{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'title'|trans({}, 'events') }} - ZeTilt CMS{% endblock %}

{% block content %}
<!-- Header -->
<div class="bg-white shadow">
    <div class="w-[95%] mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">{{ 'list.title'|trans({}, 'events') }}</h1>
                <p class="mt-1 text-sm text-gray-500">{{ 'subtitle'|trans({}, 'events') }}</p>
            </div>
            <div class="flex space-x-3">
                <a href="{{ path('admin_events_calendar') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                    <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    {{ 'calendar.title'|trans({}, 'events') }}
                </a>
                <a href="{{ path('admin_events_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    {{ 'actions.create_event'|trans({}, 'events') }}
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="w-[95%] mx-auto py-4 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow p-4">
        <form method="GET" class="flex flex-wrap gap-4 items-end">
            <div>
                <label for="status" class="block text-sm font-medium text-gray-700">{{ 'fields.status'|trans({}, 'events') }}</label>
                <select name="status" id="status" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <option value="">{{ 'filters.all'|trans({}, 'events') }}</option>
                    <option value="draft" {% if currentStatus == 'draft' %}selected{% endif %}>{{ 'status.draft'|trans({}, 'events') }}</option>
                    <option value="published" {% if currentStatus == 'published' %}selected{% endif %}>{{ 'status.published'|trans({}, 'events') }}</option>
                    <option value="cancelled" {% if currentStatus == 'cancelled' %}selected{% endif %}>{{ 'status.cancelled'|trans({}, 'events') }}</option>
                </select>
            </div>
            
            <div>
                <label for="type" class="block text-sm font-medium text-gray-700">{{ 'fields.category'|trans({}, 'events') }}</label>
                <select name="type" id="type" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <option value="">{{ 'filters.all'|trans({}, 'events') }}</option>
                    {% for eventType in eventTypes %}
                        <option value="{{ eventType.slug }}" {% if currentType == eventType.slug %}selected{% endif %}>{{ eventType.name }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div>
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    {{ 'filters.apply'|trans({}, 'events') }}
                </button>
                <a href="{{ path('admin_events_list') }}" class="ml-2 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    {{ 'actions.clear_filters'|trans({}, 'events') }}
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Events Table -->
<div class="w-[95%] mx-auto py-6 px-4 sm:px-6 lg:px-8">
    {% if events is empty %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">{{ 'list.no_events'|trans({}, 'events') }}</h3>
            <p class="mt-1 text-sm text-gray-500">{{ 'list.create_first'|trans({}, 'events') }}</p>
            <div class="mt-6">
                <a href="{{ path('admin_events_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    {{ 'actions.create_event'|trans({}, 'events') }}
                </a>
            </div>
        </div>
    {% else %}
        <!-- Table View -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'fields.title'|trans({}, 'events') }}</th>
                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'fields.start_date'|trans({}, 'events') }}</th>
                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'fields.location'|trans({}, 'events') }}</th>
                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-center">{{ 'header.registrations'|trans({}, 'events') }}</th>
                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-center">{{ 'fields.status'|trans({}, 'events') }}</th>
                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'header.organizer'|trans({}, 'events') }}</th>
                        <th class="px-3 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'actions.actions'|trans({}, 'admin') }}</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for event in events %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-3 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-2 h-2 rounded-full mr-3 
                                        {% if event.status == 'published' %}bg-green-400
                                        {% elseif event.status == 'draft' %}bg-yellow-400
                                        {% else %}bg-red-400{% endif %}">
                                    </div>
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">{{ event.title }}</div>
                                        <div class="text-sm text-gray-500">{{ event.type|title }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ event.startDate|date('d/m/Y') }}</div>
                                <div class="text-sm text-gray-500">{{ event.startDate|date('H:i') }}</div>
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ event.location ?: '-' }}</div>
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap text-center">
                                {% if event.requiresRegistration %}
                                    <span class="text-sm text-gray-900">{{ event.currentParticipants }}{% if event.maxParticipants %}/{{ event.maxParticipants }}{% endif %}</span>
                                {% else %}
                                    <span class="text-sm text-gray-500">-</span>
                                {% endif %}
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap text-center">
                                {% if event.status == 'published' %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        {{ 'status.published'|trans({}, 'events') }}
                                    </span>
                                {% elseif event.status == 'draft' %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        {{ 'status.draft'|trans({}, 'events') }}
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                        {{ 'status.cancelled'|trans({}, 'events') }}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ event.organizer.firstName }} {{ event.organizer.lastName }}
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end space-x-2">
                                    <a href="{{ path('admin_events_edit', {id: event.id}) }}" class="text-indigo-600 hover:text-indigo-900" title="Modifier l'Ã©vÃ©nement">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </a>
                                    <a href="{{ path('admin_events_registrations', {id: event.id}) }}" class="text-gray-600 hover:text-gray-900" title="Voir les inscriptions">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if totalPages > 1 %}
            <div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 mt-6">
                <div class="flex flex-1 justify-between sm:hidden">
                    {% if currentPage > 1 %}
                        <a href="{{ path('admin_events_list', {page: currentPage - 1, status: currentStatus, type: currentType}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">{{ 'actions.previous'|trans({}, 'events') }}</a>
                    {% endif %}
                    {% if currentPage < totalPages %}
                        <a href="{{ path('admin_events_list', {page: currentPage + 1, status: currentStatus, type: currentType}) }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">{{ 'actions.next'|trans({}, 'events') }}</a>
                    {% endif %}
                </div>
                <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            {{ 'pagination.page'|trans({}, 'events') }} <span class="font-medium">{{ currentPage }}</span> {{ 'pagination.of'|trans({}, 'events') }} <span class="font-medium">{{ totalPages }}</span>
                            (<span class="font-medium">{{ totalEvents }}</span> {{ 'pagination.total_events'|trans({}, 'events') }})
                        </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                            {% for page in 1..totalPages %}
                                {% if page == currentPage %}
                                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500">{{ page }}</span>
                                {% else %}
                                    <a href="{{ path('admin_events_list', {page: page, status: currentStatus, type: currentType}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ page }}</a>
                                {% endif %}
                            {% endfor %}
                        </nav>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}