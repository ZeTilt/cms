{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'title'|trans({}, 'articles') }} - ZeTilt CMS{% endblock %}

{% block breadcrumb_items %}
    <li>
        <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-4 text-sm font-medium text-gray-500" aria-current="page">{{ 'breadcrumb.articles'|trans({}, 'articles') }}</span>
        </div>
    </li>
{% endblock %}

{% block content %}
<!-- Header -->
<div class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-4 sm:py-6 px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2 sm:space-x-4">
                <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">
                    {{ 'list.title'|trans({}, 'articles') }}
                </h1>
            </div>
            <div class="flex items-center space-x-4">
                <!-- View Mode Switch -->
                <div class="flex items-center space-x-2">
                    <span class="text-sm text-gray-500">{{ 'view_mode.title'|trans({}, 'articles') }}:</span>
                    <div class="flex bg-gray-100 rounded-lg p-1">
                        <button onclick="toggleViewMode('list')" 
                                id="list-btn"
                                class="px-3 py-1 text-xs font-medium text-gray-700 rounded-md transition-all duration-150">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                            </svg>
                            {{ 'view_mode.list'|trans({}, 'articles') }}
                        </button>
                        <button onclick="toggleViewMode('table')"
                                id="table-btn"
                                class="px-3 py-1 text-xs font-medium text-gray-700 rounded-md transition-all duration-150">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0V4a1 1 0 011-1h12a1 1 0 011 1v16a1 1 0 01-1 1H4a1 1 0 01-1-1z"></path>
                            </svg>
                            {{ 'view_mode.table'|trans({}, 'articles') }}
                        </button>
                    </div>
                </div>
                
                <a href="{{ path('admin_articles_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                    {{ 'actions.create_article'|trans({}, 'articles') }}
                </a>
            </div>
        </div>
        <p class="mt-2 text-sm text-gray-600">
            {{ 'subtitle'|trans({}, 'articles') }}
        </p>
    </div>
</div>

<!-- Content -->
<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    {% if articles is empty %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">{{ 'list.no_articles'|trans({}, 'articles') }}</h3>
            <p class="mt-1 text-sm text-gray-500">{{ 'list.create_first'|trans({}, 'articles') }}</p>
            <div class="mt-6">
                <a href="{{ path('admin_articles_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    {{ 'actions.create_article'|trans({}, 'articles') }}
                </a>
            </div>
        </div>
    {% else %}
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul role="list" class="divide-y divide-gray-200">
                {% for article in articles %}
                    <li>
                        <a href="{{ path('admin_articles_show', {id: article.id}) }}" class="block hover:bg-gray-50 transition-colors">
                            <div class="px-4 py-4 sm:px-6">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <div class="min-w-0 flex-1">
                                            <p class="text-sm font-medium text-indigo-600 truncate">
                                                {{ article.title }}
                                            </p>
                                            {% if article.excerpt %}
                                                <p class="mt-1 text-sm text-gray-600 line-clamp-2">
                                                    {{ article.excerpt }}
                                                </p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-3">
                                        {% if article.category %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                {{ article.category }}
                                            </span>
                                        {% endif %}
                                        
                                        {% if article.status == 'published' %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                {{ 'status.published'|trans({}, 'articles') }}
                                            </span>
                                        {% else %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                {{ 'status.draft'|trans({}, 'articles') }}
                                            </span>
                                        {% endif %}
                                        
                                        <div class="text-sm text-gray-500">
                                            {{ article.updatedAt|date('M j, Y') }}
                                        </div>
                                        
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                        </svg>
                                    </div>
                                </div>
                                
                                {% if article.tags and article.tags|length > 0 %}
                                    <div class="mt-2 flex flex-wrap gap-1">
                                        {% for tag in article.tags %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                                #{{ tag }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                
                                <div class="mt-2 sm:flex sm:justify-between">
                                    <div class="sm:flex">
                                        <p class="flex items-center text-sm text-gray-500">
                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                            {{ article.author.fullName }}
                                        </p>
                                        {% if article.publishedAt %}
                                            <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                                                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                </svg>
                                                {{ 'status.published'|trans({}, 'articles') }} {{ article.publishedAt|date('M j, Y') }}
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <!-- Pagination -->
        {% include 'components/pagination.html.twig' with {
            current_page: current_page,
            total_pages: total_pages,
            total_articles: total_articles,
            route_name: 'admin_articles_list'
        } %}
    {% endif %}
</div>

<script>
function toggleViewMode(mode) {
    // Update localStorage
    localStorage.setItem('articles-view-mode', mode);
    
    // Get elements
    const listView = document.getElementById('list-view');
    const tableView = document.getElementById('table-view');
    const listBtn = document.getElementById('list-btn');
    const tableBtn = document.getElementById('table-btn');
    
    // Check if elements exist
    if (!listView || !tableView || !listBtn || !tableBtn) {
        console.warn('View mode elements not found');
        return;
    }
    
    if (mode === 'list') {
        // Show list, hide table
        listView.classList.remove('hidden');
        tableView.classList.add('hidden');
        
        // Update button styles
        listBtn.classList.add('bg-white', 'shadow-sm');
        tableBtn.classList.remove('bg-white', 'shadow-sm');
    } else {
        // Show table, hide list
        listView.classList.add('hidden');
        tableView.classList.remove('hidden');
        
        // Update button styles
        tableBtn.classList.add('bg-white', 'shadow-sm');
        listBtn.classList.remove('bg-white', 'shadow-sm');
    }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    const savedMode = localStorage.getItem('articles-view-mode') || 'list';
    toggleViewMode(savedMode);
});
</script>

{% endblock %}