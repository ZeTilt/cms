{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'title'|trans({}, 'translations') }}{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate">{{ 'title'|trans({}, 'translations') }}</h2>
            <p class="mt-1 text-sm text-gray-500">Gérez les traductions de votre contenu en plusieurs langues</p>
        </div>
        <div class="mt-4 flex md:ml-4 md:mt-0">
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('admin_translation_settings') }}" class="ml-3 inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500">
                <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {{ 'actions.settings'|trans({}, 'admin') }}
            </a>
            {% endif %}
        </div>
    </div>

    <!-- Locale Overview -->
    <div class="bg-white shadow rounded-lg mb-8">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Langues Supportées</h3>
            <div class="flex flex-wrap gap-2">
                {% for locale in supportedLocales %}
                    <span class="inline-flex items-center rounded-full px-3 py-0.5 text-sm font-medium 
                        {% if locale == defaultLocale %}
                            bg-blue-100 text-blue-800
                        {% else %}
                            bg-gray-100 text-gray-800
                        {% endif %}
                    ">
                        {{ locale_name(locale) }}
                        {% if locale == defaultLocale %}
                            <span class="ml-1 text-xs">(défaut)</span>
                        {% endif %}
                    </span>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Content to Translate -->
    {% for entityTypeName, entityList in entities %}
        {% if entityList is not empty %}
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">{{ entityTypeName }}</h3>
                
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-300">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'fields.content'|trans({}, 'admin') }}</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Progression des Traductions</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for entity in entityList %}
                                {% set completion = translation_completion(entity) %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">
                                                    {% if entity.title is defined %}
                                                        {{ entity.title }}
                                                    {% elseif entity.name is defined %}
                                                        {{ entity.name }}
                                                    {% else %}
                                                        {{ entityTypeName|slice(0, -1) }} #{{ entity.id }}
                                                    {% endif %}
                                                </div>
                                                <div class="text-sm text-gray-500">
                                                    ID: {{ entity.id }}
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex flex-wrap gap-1">
                                            {% for locale in supportedLocales %}
                                                {% set percent = completion[locale] %}
                                                <div class="flex items-center">
                                                    <span class="text-xs text-gray-500 mr-1">{{ locale|upper }}</span>
                                                    <div class="w-16 h-2 bg-gray-200 rounded-full overflow-hidden">
                                                        <div class="h-full 
                                                            {% if percent == 100 %}
                                                                bg-green-500
                                                            {% elseif percent >= 50 %}
                                                                bg-yellow-500
                                                            {% else %}
                                                                bg-red-500
                                                            {% endif %}
                                                        " style="width: {{ percent }}%"></div>
                                                    </div>
                                                    <span class="text-xs text-gray-500 ml-1">{{ percent }}%</span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <a href="{{ path('admin_translation_edit', {entityType: entityTypeName|lower|slice(0, -1), id: entity.id}) }}" 
                                           class="text-blue-600 hover:text-blue-900">
                                            Traduire
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}

    {% if entities is empty or (entities|length == 1 and entities|first is empty) %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 5h12l2 7H5l-2-7zm0 0l2-3h12l2 3M7 12v5a2 2 0 002 2h6a2 2 0 002-2v-5"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">{{ 'messages.no_content'|trans({}, 'translations') }}</h3>
            <p class="mt-1 text-sm text-gray-500">{{ 'messages.get_started'|trans({}, 'translations') }}</p>
        </div>
    {% endif %}
</div>
{% endblock %}