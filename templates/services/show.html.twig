{% extends 'base.html.twig' %}

{% block title %}{{ service.name }} - Services - ZeTilt CMS{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
            <li>
                <a href="{{ path('services_index') }}" class="text-gray-400 hover:text-gray-500">Services</a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-4 text-sm font-medium text-gray-500">{{ service.name }}</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- Service Header -->
    <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
        {% if service.featuredImage %}
            <div class="aspect-w-16 aspect-h-6">
                <img src="{{ service.featuredImage }}" alt="{{ service.name }}" class="w-full h-64 object-cover">
            </div>
        {% endif %}
        
        <div class="px-6 py-8">
            <div class="flex items-center justify-between mb-4">
                {% if service.category %}
                    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                        {{ service.category|title }}
                    </span>
                {% endif %}
                {% if service.price %}
                    <div class="text-right">
                        <div class="text-3xl font-bold text-gray-900">
                            {% if service.priceType == 'fixed' %}
                                €{{ service.price }}
                            {% else %}
                                From €{{ service.price }}
                            {% endif %}
                        </div>
                        {% if service.priceType != 'fixed' %}
                            <div class="text-sm text-gray-500">{{ service.priceType|title }} pricing</div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
            
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ service.name }}</h1>
            
            {% if service.shortDescription %}
                <p class="text-xl text-gray-600 mb-6">{{ service.shortDescription }}</p>
            {% endif %}
            
            <!-- Service Meta Info -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 text-sm mb-6">
                {% if service.duration %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Duration</p>
                            <p class="text-gray-600">{{ service.duration }}</p>
                        </div>
                    </div>
                {% endif %}
                
                {% if service.location %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Location</p>
                            <p class="text-gray-600">{{ service.location }}</p>
                        </div>
                    </div>
                {% endif %}
                
                {% if service.deliveryMethod %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Delivery Method</p>
                            <p class="text-gray-600">{{ service.deliveryMethod|title }}</p>
                        </div>
                    </div>
                {% endif %}
                
                {% if service.maxParticipants %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Maximum Participants</p>
                            <p class="text-gray-600">{{ service.maxParticipants }} people</p>
                        </div>
                    </div>
                {% endif %}

                {% if service.isBookable %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Availability</p>
                            <p class="text-green-600 font-medium">Available for booking</p>
                        </div>
                    </div>
                {% endif %}
            </div>
            
            <!-- Book Now Button -->
            {% if service.isBookable %}
                <div class="bg-indigo-50 p-6 rounded-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-medium text-indigo-900 mb-2">Ready to get started?</h3>
                            <p class="text-indigo-700">Book this service now or contact us for more information.</p>
                        </div>
                        <div class="flex space-x-3">
                            <button type="button" 
                                    class="inline-flex items-center px-4 py-2 border border-indigo-300 rounded-md shadow-sm text-sm font-medium text-indigo-700 bg-white hover:bg-indigo-50">
                                Contact Us
                            </button>
                            <button type="button" 
                                    class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                                Book Now
                            </button>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Service Description -->
    {% if service.description %}
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-6 py-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Service Details</h2>
                <div class="prose max-w-none">
                    {{ service.description|nl2br }}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Pricing Details -->
    {% if service.pricing %}
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-6 py-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Pricing Information</h2>
                <div class="prose max-w-none">
                    {{ service.pricing|nl2br }}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Requirements & Prerequisites -->
    {% if service.requirements %}
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-6 py-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Requirements & Prerequisites</h2>
                <div class="prose max-w-none">
                    {{ service.requirements|nl2br }}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Related Services -->
    {% if relatedServices|length > 0 %}
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Services</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {% for relatedService in relatedServices %}
                        <article class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                            <h3 class="font-semibold text-gray-900 mb-2">
                                <a href="{{ path('services_show', {'slug': relatedService.slug}) }}" class="hover:text-indigo-600">
                                    {{ relatedService.name }}
                                </a>
                            </h3>
                            {% if relatedService.price %}
                                <p class="text-lg font-bold text-gray-900 mb-2">
                                    {% if relatedService.priceType == 'fixed' %}
                                        €{{ relatedService.price }}
                                    {% else %}
                                        From €{{ relatedService.price }}
                                    {% endif %}
                                </p>
                            {% endif %}
                            {% if relatedService.shortDescription %}
                                <p class="text-sm text-gray-600">
                                    {{ relatedService.shortDescription|slice(0, 100) }}{% if relatedService.shortDescription|length > 100 %}...{% endif %}
                                </p>
                            {% endif %}
                        </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}