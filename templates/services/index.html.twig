{% extends 'base.html.twig' %}

{% block title %}Services - ZeTilt CMS{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Our Services</h1>
        <p class="text-xl text-gray-600">Discover what we offer to help you succeed</p>
    </div>

    <!-- Category Filters -->
    {% if categories|length > 0 %}
        <div class="bg-white shadow rounded-lg mb-6">
            <div class="px-6 py-4">
                <div class="flex flex-wrap gap-4 items-center">
                    <span class="text-sm font-medium text-gray-700">Categories:</span>
                    <a href="{{ path('services_index') }}" 
                       class="px-3 py-1 text-sm rounded-full {% if not currentCategory %}bg-indigo-100 text-indigo-800{% else %}bg-gray-100 text-gray-700 hover:bg-gray-200{% endif %}">
                        All Services
                    </a>
                    {% for category in categories %}
                        <a href="{{ path('services_index', {'category': category}) }}" 
                           class="px-3 py-1 text-sm rounded-full {% if currentCategory == category %}bg-indigo-100 text-indigo-800{% else %}bg-gray-100 text-gray-700 hover:bg-gray-200{% endif %}">
                            {{ category|title }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Services Grid -->
    {% if services|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            {% for service in services %}
                <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    {% if service.featuredImage %}
                        <div class="aspect-w-16 aspect-h-9">
                            <img src="{{ service.featuredImage }}" alt="{{ service.name }}" class="w-full h-48 object-cover">
                        </div>
                    {% endif %}
                    
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-3">
                            {% if service.category %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                    {{ service.category|title }}
                                </span>
                            {% endif %}
                            {% if service.price %}
                                <span class="text-lg font-bold text-gray-900">
                                    {% if service.pricingType == 'fixed' %}
                                        €{{ service.price }}
                                    {% else %}
                                        From €{{ service.price }}
                                    {% endif %}
                                </span>
                            {% endif %}
                        </div>
                        
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                            <a href="{{ path('services_show', {'slug': service.slug}) }}" class="hover:text-indigo-600">
                                {{ service.name }}
                            </a>
                        </h3>
                        
                        {% if service.shortDescription %}
                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                                {{ service.shortDescription }}
                            </p>
                        {% endif %}
                        
                        <div class="space-y-2 text-sm text-gray-500">
                            {% if service.duration %}
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Duration: {{ service.duration }} min
                                </div>
                            {% endif %}
                            
                            {% if service.features and service.features|length > 0 %}
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    {{ service.features|slice(0,3)|join(', ') }}
                                </div>
                            {% endif %}
                            
                            {% if service.category %}
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                    </svg>
                                    {{ service.category|title }}
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between items-center">
                            <a href="{{ path('services_show', {'slug': service.slug}) }}" 
                               class="inline-flex items-center text-indigo-600 hover:text-indigo-500 font-medium">
                                Learn more
                                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>
                            
                            {% if service.isBookable %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Bookable
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if totalPages > 1 %}
            <nav class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 rounded-lg shadow">
                <div class="flex flex-1 justify-between sm:hidden">
                    {% if currentPage > 1 %}
                        <a href="{{ path('services_index', {'page': currentPage - 1, 'category': currentCategory}) }}" 
                           class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Previous
                        </a>
                    {% endif %}
                    {% if currentPage < totalPages %}
                        <a href="{{ path('services_index', {'page': currentPage + 1, 'category': currentCategory}) }}" 
                           class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Next
                        </a>
                    {% endif %}
                </div>
                <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            Showing <span class="font-medium">{{ ((currentPage - 1) * 12) + 1 }}</span> to 
                            <span class="font-medium">{{ min(currentPage * 12, totalServices) }}</span> of 
                            <span class="font-medium">{{ totalServices }}</span> services
                        </p>
                    </div>
                    <div>
                        <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm">
                            {% for page in 1..totalPages %}
                                {% if page == currentPage %}
                                    <span class="relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white">
                                        {{ page }}
                                    </span>
                                {% else %}
                                    <a href="{{ path('services_index', {'page': page, 'category': currentCategory}) }}" 
                                       class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                                        {{ page }}
                                    </a>
                                {% endif %}
                            {% endfor %}
                        </nav>
                    </div>
                </div>
            </nav>
        {% endif %}
    {% else %}
        <!-- Empty State -->
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No services found</h3>
            <p class="mt-1 text-sm text-gray-500">
                {% if currentCategory %}
                    No services found in the "{{ currentCategory }}" category.
                {% else %}
                    No services are currently available.
                {% endif %}
            </p>
        </div>
    {% endif %}
</div>
{% endblock %}