{% extends 'base.html.twig' %}

{% block title %}S'inscrire - {{ event.title }} - ZeTilt CMS{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h1 class="text-2xl font-bold text-gray-900">{{ 'registration.form.title'|trans({}, 'events') }}</h1>
            <p class="mt-1 text-sm text-gray-600">{{ event.title }}</p>
        </div>

        <div class="px-6 py-4">
            <!-- Affichage des erreurs de validation -->
            {% if validation_errors and validation_errors|length > 0 %}
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                    <h3 class="text-sm font-medium text-red-900 mb-2">Inscription impossible :</h3>
                    <ul class="text-sm text-red-800 space-y-1">
                        {% for error in validation_errors %}
                            <li class="flex items-start">
                                <svg class="flex-shrink-0 w-4 h-4 text-red-600 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                </svg>
                                {{ error }}
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="mt-3 text-sm text-red-700">
                        <p><strong>{{ 'registration.form.prerequisites_not_met'|trans({}, 'events') }}</strong></p>
                        <p class="mt-1">{{ 'registration.form.prerequisites_contact'|trans({}, 'events') }}</p>
                    </div>
                </div>
            {% endif %}
        </div>

        <form method="post" class="px-6 py-4 space-y-6">
            <input type="hidden" name="_token" value="{{ csrf_token('event_registration_' ~ event.id) }}">
            <div>
                <label for="number_of_spots" class="block text-sm font-medium text-gray-700">Nombre de places</label>
                <select name="number_of_spots" id="number_of_spots" 
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    {% for i in 1..5 %}
                        <option value="{{ i }}">{{ i }} place{{ i > 1 ? 's' : '' }}</option>
                    {% endfor %}
                </select>
                <p class="mt-2 text-sm text-gray-500">{{ 'registration.form.select_spots'|trans({}, 'events') }}</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Lieu de départ</label>
                <div class="mt-2 space-y-2">
                    <div class="flex items-center">
                        <input id="departure_club" name="departure_location" type="radio" value="club" checked
                               class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                        <label for="departure_club" class="ml-2 block text-sm text-gray-900">
                            Départ du club
                        </label>
                    </div>
                    <div class="flex items-center">
                        <input id="departure_dock" name="departure_location" type="radio" value="dock"
                               class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300">
                        <label for="departure_dock" class="ml-2 block text-sm text-gray-900">
                            Départ au quai
                        </label>
                    </div>
                </div>
            </div>

            <div>
                <label for="comment" class="block text-sm font-medium text-gray-700">Commentaire (optionnel)</label>
                <textarea name="comment" id="comment" rows="3"
                          class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                          placeholder="{{ 'registration.form.comments_placeholder'|trans({}, 'events') }}"></textarea>
            </div>

            <div class="flex justify-end space-x-3">
                <a href="{{ path('events_show', {slug: event.slug}) }}" 
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                    {{ 'registration.form.cancel'|trans({}, 'events') }}
                </a>
                <button type="submit" 
                        {% if not can_register %}disabled{% endif %}
                        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white {{ can_register ? 'bg-indigo-600 hover:bg-indigo-700' : 'bg-gray-400 cursor-not-allowed' }}">
                    {% if can_register %}
                        {{ 'registration.form.confirm'|trans({}, 'events') }}
                    {% else %}
                        Inscription impossible
                    {% endif %}
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}