{% extends 'base.html.twig' %}

{% block title %}{{ event.title }} - Events - ZeTilt CMS{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
            <li>
                <a href="{{ path('events_index') }}" class="text-gray-400 hover:text-gray-500">Events</a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-4 text-sm font-medium text-gray-500">{{ event.title }}</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- Event Header -->
    <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
        {% if event.featuredImage %}
            <div class="aspect-w-16 aspect-h-6">
                <img src="{{ event.featuredImage }}" alt="{{ event.title }}" class="w-full h-64 object-cover">
            </div>
        {% endif %}
        
        <div class="px-6 py-8">
            <div class="flex items-center justify-between mb-4">
                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                    {{ event.type|title }}
                </span>
                {% if event.tags %}
                    <div class="flex flex-wrap gap-2">
                        {% for tag in event.tags %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                {{ tag }}
                            </span>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ event.title }}</h1>
            
            {% if event.shortDescription %}
                <p class="text-xl text-gray-600 mb-6">{{ event.shortDescription }}</p>
            {% endif %}
            
            <!-- Event Meta Info -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 text-sm">
                {% if event.startDate %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">{{ 'fields.date'|trans({}, 'admin') }}</p>
                            <p class="text-gray-600">{{ event.startDate|date('F j, Y') }}</p>
                        </div>
                    </div>
                {% endif %}
                
                {% if event.startDate %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Time</p>
                            <p class="text-gray-600">
                                {{ event.startDate|date('g:i A') }}
                                {% if event.endDate and event.endDate != event.startDate %}
                                    - {{ event.endDate|date('g:i A') }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                {% endif %}
                
                {% if event.location %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Location</p>
                            <p class="text-gray-600">{{ event.location }}</p>
                            {% if event.address %}
                                <p class="text-gray-500 text-xs">{{ event.address }}</p>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                
                {% if event.isRequiresRegistration %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Capacity</p>
                            <p class="text-gray-600">
                                {% if event.maxParticipants %}
                                    {{ event.confirmedParticipants }} / {{ event.maxParticipants }} participants
                                    {% if event.availableSpots == 0 %}
                                        <span class="text-red-600 font-medium ml-2">Full</span>
                                    {% endif %}
                                {% else %}
                                    {{ event.confirmedParticipants }} participants
                                {% endif %}
                            </p>
                        </div>
                    </div>
                {% endif %}
                
                {% if event.organizer %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Organizer</p>
                            <p class="text-gray-600">{{ event.organizer.username }}</p>
                        </div>
                    </div>
                {% endif %}
                
                {% if event.formattedDuration %}
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900">Duration</p>
                            <p class="text-gray-600">{{ event.formattedDuration }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
            
            <!-- Registration Section -->
            {% if event.isRequiresRegistration and event.acceptsRegistrations %}
                <div class="mt-8">
                    {% if app.user %}
                        {% set userRegistration = null %}
                        {% for registration in event.registrations %}
                            {% if registration.user.id == app.user.id %}
                                {% set userRegistration = registration %}
                            {% endif %}
                        {% endfor %}
                        
                        {% if userRegistration %}
                            <!-- User is already registered -->
                            <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <div>
                                            <p class="text-green-800 font-medium">You are registered for this event</p>
                                            <p class="text-green-700 text-sm">Status: {{ userRegistration.statusLabel }}</p>
                                        </div>
                                    </div>
                                    <form method="post" action="{{ path('event_unregister', {'slug': event.slug}) }}" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('unregister_' ~ event.id) }}">
                                        <button type="submit" class="px-4 py-2 text-sm font-medium text-red-600 hover:text-red-500 border border-red-300 rounded-md hover:bg-red-50">
                                            Cancel Registration
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {% else %}
                            <!-- User can register -->
                            <div class="p-4 bg-indigo-50 border border-indigo-200 rounded-lg">
                                {% if event.availableSpots == 0 %}
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center">
                                            <svg class="w-5 h-5 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.664-.833-2.464 0L4.35 18.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                            </svg>
                                            <div>
                                                <p class="text-orange-800 font-medium">Event is full</p>
                                                <p class="text-orange-700 text-sm">You can join the waiting list</p>
                                            </div>
                                        </div>
                                        <form method="post" action="{{ path('event_register', {'slug': event.slug}) }}" class="inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('register_' ~ event.id) }}">
                                            <button type="submit" class="px-6 py-2 bg-orange-600 text-white font-medium rounded-md hover:bg-orange-700">
                                                Join Waiting List
                                            </button>
                                        </form>
                                    </div>
                                {% else %}
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center">
                                            <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <div>
                                                <p class="text-green-800 font-medium">Registration is open</p>
                                                <p class="text-green-700 text-sm">
                                                    {% if event.availableSpots %}
                                                        {{ event.availableSpots }} spot{% if event.availableSpots != 1 %}s{% endif %} remaining
                                                    {% else %}
                                                        Unlimited capacity
                                                    {% endif %}
                                                </p>
                                            </div>
                                        </div>
                                        <form method="post" action="{{ path('event_register', {'slug': event.slug}) }}" class="inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('register_' ~ event.id) }}">
                                            <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700">
                                                Register Now
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}
                    {% else %}
                        <!-- User not logged in -->
                        <div class="p-4 bg-gray-50 border border-gray-200 rounded-lg">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    <div>
                                        <p class="text-gray-800 font-medium">Registration required</p>
                                        <p class="text-gray-600 text-sm">Please log in to register for this event</p>
                                    </div>
                                </div>
                                <a href="{{ path('app_login') }}" class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700">
                                    Log In
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Event Description -->
    {% if event.description %}
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-6 py-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">About this Event</h2>
                <div class="prose max-w-none">
                    {{ event.description|nl2br }}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Custom Attributes -->
    {% if event.eventAttributes|length > 0 %}
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-6 py-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Event Details</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {% for attribute in event.eventAttributes %}
                        <div class="border-l-4 border-indigo-500 pl-4">
                            <h3 class="font-medium text-gray-900 mb-1">{{ attribute.attributeKey|replace({'_': ' '})|title }}</h3>
                            <div class="text-gray-600">
                                {% set value = attribute.typedValue %}
                                {% if value is same as(true) %}
                                    <span class="text-green-600 font-medium">✓ Yes</span>
                                {% elseif value is same as(false) %}
                                    <span class="text-red-600 font-medium">✗ No</span>
                                {% elseif value is null %}
                                    <span class="text-gray-400 italic">Not specified</span>
                                {% elseif attribute.attributeType == 'date' and value %}
                                    {{ value|date('F j, Y') }}
                                {% elseif attribute.attributeType == 'json' and value %}
                                    {% if value is iterable %}
                                        <ul class="list-disc list-inside">
                                            {% for item in value %}
                                                <li>{{ item }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        {{ value }}
                                    {% endif %}
                                {% else %}
                                    {{ value }}
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Related Events -->
    {% if relatedEvents|length > 0 %}
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Events</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {% for relatedEvent in relatedEvents %}
                        <article class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                            <h3 class="font-semibold text-gray-900 mb-2">
                                <a href="{{ path('events_show', {'slug': relatedEvent.slug}) }}" class="hover:text-indigo-600">
                                    {{ relatedEvent.title }}
                                </a>
                            </h3>
                            {% if relatedEvent.startDate %}
                                <p class="text-sm text-gray-500 mb-2">
                                    {{ relatedEvent.startDate|date('M j, Y') }}
                                </p>
                            {% endif %}
                            {% if relatedEvent.shortDescription %}
                                <p class="text-sm text-gray-600">
                                    {{ relatedEvent.shortDescription|slice(0, 100) }}{% if relatedEvent.shortDescription|length > 100 %}...{% endif %}
                                </p>
                            {% endif %}
                        </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}