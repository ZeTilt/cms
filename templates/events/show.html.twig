{% extends 'base.html.twig' %}

{% block title %}{{ event.title }} - ZeTilt CMS{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h1 class="text-3xl font-bold text-gray-900">{{ event.title }}</h1>
            <p class="mt-1 text-sm text-gray-500">{{ event.type|title }}</p>
        </div>

        <div class="px-6 py-4">
            {% if event.shortDescription %}
                <p class="text-lg text-gray-600 mb-4">{{ event.shortDescription }}</p>
            {% endif %}
            
            {% if event.description %}
                <div class="prose max-w-none mb-6">
                    {{ event.description|nl2br }}
                </div>
            {% endif %}

            <!-- Participants List -->
            {% if event.registrations|length > 0 %}
            <div class="border-t pt-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">
                    Participants inscrits ({{ event.currentParticipants }})
                </h3>
                <div class="space-y-3">
                    {% for registration in event.confirmedRegistrations %}
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                            <div class="flex items-center space-x-4">
                                <div>
                                    <div class="text-sm font-medium text-gray-900">
                                        {{ registration.user.fullName }}
                                    </div>
                                    {% set userLevel = registration.user.getUserAttributeByKey('niveau_plongee') %}
                                    {% if userLevel %}
                                        <div class="text-xs text-gray-500">
                                            Niveau: {{ userLevel.attributeValue|title }}
                                        </div>
                                    {% endif %}
                                </div>
                                {% if registration.numberOfSpots > 1 %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                        {{ registration.numberOfSpots }} place{{ registration.numberOfSpots > 1 ? 's' : '' }}
                                    </span>
                                {% endif %}
                            </div>
                            <div class="text-xs text-gray-500">
                                {{ registration.departureLocationLabel }}
                            </div>
                        </div>
                    {% endfor %}
                    
                    {% if event.waitingListRegistrations|length > 0 %}
                        <div class="border-t pt-3 mt-6">
                            <h4 class="text-sm font-medium text-gray-500 mb-2">Liste d'attente</h4>
                            {% for registration in event.waitingListRegistrations %}
                                <div class="flex items-center justify-between p-2 bg-yellow-50 rounded">
                                    <div class="flex items-center space-x-4">
                                        <div>
                                            <div class="text-sm text-gray-600">{{ registration.user.fullName }}</div>
                                            {% set userLevel = registration.user.getUserAttributeByKey('niveau_plongee') %}
                                            {% if userLevel %}
                                                <div class="text-xs text-gray-500">
                                                    Niveau: {{ userLevel.attributeValue|title }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        {% if registration.numberOfSpots > 1 %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                                                {{ registration.numberOfSpots }} place{{ registration.numberOfSpots > 1 ? 's' : '' }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- Registration Section -->
            {% if event.requiresRegistration and app.user %}
                <div class="border-t pt-6 mt-6">
                    {% set existingRegistration = null %}
                    {% for reg in event.registrations %}
                        {% if reg.user.id == app.user.id %}
                            {% set existingRegistration = reg %}
                        {% endif %}
                    {% endfor %}

                    {% if existingRegistration %}
                        <div class="p-3 bg-green-50 border border-green-200 rounded-md mb-4">
                            <span class="text-sm text-green-800">
                                {% if existingRegistration.status == 'registered' %}
                                    Vous êtes inscrit à cet événement
                                {% else %}
                                    Vous êtes en liste d'attente
                                {% endif %}
                            </span>
                        </div>
                        <form action="{{ path('event_unregister', {slug: event.slug}) }}" method="post">
                            <input type="hidden" name="_token" value="{{ csrf_token('unregister_' ~ event.id) }}">
                            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700"
                                    onclick="return confirm('{{ 'registration.form.confirm_unregister'|trans({}, 'events') }}')">
                                Se désinscrire
                            </button>
                        </form>
                    {% else %}
                        <a href="{{ path('event_register', {slug: event.slug}) }}" 
                           class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
                            S'inscrire
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}