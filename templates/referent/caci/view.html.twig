{% extends 'admin/base.html.twig' %}

{% block title %}Validation CACI - {{ certificate.user.fullName }}{% endblock %}

{% block page_title %}Validation CACI{% endblock %}

{% block page_description %}
    <p class="mt-1 text-sm text-gray-500">{{ certificate.user.fullName }}</p>
{% endblock %}

{% block breadcrumb_items %}
    <li class="flex items-center">
        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <a href="{{ path('referent_caci_list') }}" class="ml-2 text-sm font-medium text-gray-500 hover:text-gray-700">Validation CACI</a>
    </li>
    <li class="flex items-center">
        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <span class="ml-2 text-sm font-medium text-gray-500">{{ certificate.user.fullName }}</span>
    </li>
{% endblock %}

{% block content %}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Document CACI -->
        <div class="lg:col-span-2">
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">Document CACI</h2>
                    <p class="text-sm text-gray-500">{{ certificate.originalFilename }}</p>
                </div>
                <div class="p-4" style="min-height: 600px;">
                    <iframe src="{{ path('referent_caci_file', {id: certificate.id}) }}"
                            class="w-full h-full border-0"
                            style="min-height: 600px;"
                            title="CACI {{ certificate.user.fullName }}">
                    </iframe>
                </div>
            </div>
        </div>

        <!-- Informations et actions -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Informations utilisateur -->
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">Informations plongeur</h2>
                </div>
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        {% if certificate.user.avatarFile %}
                            <img class="h-16 w-16 rounded-full object-cover" src="{{ asset('uploads/avatars/' ~ certificate.user.avatarFile) }}" alt="">
                        {% else %}
                            <div class="h-16 w-16 rounded-full bg-club-blue flex items-center justify-center">
                                <span class="text-xl font-medium text-white">{{ certificate.user.firstName|slice(0,1)|upper }}{{ certificate.user.lastName|slice(0,1)|upper }}</span>
                            </div>
                        {% endif %}
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-gray-900">{{ certificate.user.fullName }}</h3>
                            <p class="text-sm text-gray-500">{{ certificate.user.email }}</p>
                        </div>
                    </div>
                    <dl class="space-y-3">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Niveau de plongée</dt>
                            <dd class="text-sm text-gray-900">
                                {% if certificate.user.highestDivingLevel %}
                                    {{ certificate.user.highestDivingLevel.name }}
                                {% else %}
                                    Non renseigné
                                {% endif %}
                            </dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Membre depuis</dt>
                            <dd class="text-sm text-gray-900">{{ certificate.user.createdAt|date('d/m/Y') }}</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <!-- Informations CACI -->
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">Informations CACI</h2>
                </div>
                <div class="p-6">
                    <dl class="space-y-3">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Statut</dt>
                            <dd>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ certificate.statusBadgeClass == 'badge-warning' ? 'bg-yellow-100 text-yellow-800' : (certificate.statusBadgeClass == 'badge-success' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800') }}">
                                    {{ certificate.statusLabel }}
                                </span>
                            </dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Date d'expiration</dt>
                            <dd class="text-sm text-gray-900 font-semibold">{{ certificate.expiryDate|date('d/m/Y') }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Téléchargé le</dt>
                            <dd class="text-sm text-gray-900">{{ certificate.uploadedAt|date('d/m/Y à H:i') }}</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <!-- Actions -->
            {% if certificate.isPending %}
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">Actions</h2>
                </div>
                <div class="p-6 space-y-4">
                    <!-- Valider -->
                    <form method="POST" action="{{ path('referent_caci_validate', {id: certificate.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('caci_validate_' ~ certificate.id) }}">
                        <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Valider ce CACI
                        </button>
                    </form>

                    <!-- Rejeter -->
                    <form method="POST" action="{{ path('referent_caci_reject', {id: certificate.id}) }}" id="reject-form">
                        <input type="hidden" name="_token" value="{{ csrf_token('caci_reject_' ~ certificate.id) }}">
                        <div class="mb-3">
                            <label for="reason" class="block text-sm font-medium text-gray-700 mb-1">Motif du rejet</label>
                            <textarea id="reason" name="reason" rows="3"
                                      class="block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm"
                                      placeholder="Indiquez le motif du rejet..."></textarea>
                        </div>
                        <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                            Rejeter ce CACI
                        </button>
                    </form>
                </div>
            </div>
            {% else %}
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-medium text-gray-900">Historique validation</h2>
                </div>
                <div class="p-6">
                    {% if certificate.validatedAt %}
                    <p class="text-sm text-gray-600">
                        {% if certificate.isValidated %}Validé{% else %}Rejeté{% endif %}
                        le {{ certificate.validatedAt|date('d/m/Y à H:i') }}
                        {% if certificate.validatedBy %}
                            par {{ certificate.validatedBy.fullName }}
                        {% endif %}
                    </p>
                    {% if certificate.rejectionReason %}
                    <div class="mt-3 p-3 bg-red-50 rounded-md">
                        <p class="text-sm text-red-700"><strong>Motif :</strong> {{ certificate.rejectionReason }}</p>
                    </div>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- Retour -->
            <a href="{{ path('referent_caci_list') }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
