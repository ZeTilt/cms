{% extends 'dp/base.html.twig' %}

{% block page_title %}Participants - {{ event.title }}{% endblock %}

{% block breadcrumb_items %}
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <a href="{{ path('dp_events_list') }}" class="text-gray-500 hover:text-gray-700">√âv√©nements</a>
</li>
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <span class="text-gray-500">Participants</span>
</li>
{% endblock %}

{% block page_actions %}
<div class="flex space-x-3">
    <a href="{{ path('calendar_event_detail', {id: event.id}) }}"
       target="_blank"
       class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
        <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
        Voir sur le site
    </a>
    <a href="{{ path('dp_events_edit', {id: event.id}) }}"
       class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-club-orange hover:bg-club-orange-dark">
        <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Modifier l'√©v√©nement
    </a>
</div>
{% endblock %}

{% block content %}
<!-- Informations de l'√©v√©nement -->
<div class="bg-white shadow-sm rounded-lg mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-lg font-medium text-gray-900">{{ event.title }}</h2>
                <div class="mt-1 flex items-center space-x-4 text-sm text-gray-500">
                    <span>üìÖ {{ event.startDate|date('d/m/Y √† H:i') }}</span>
                    {% if event.location %}
                        <span>üìç {{ event.location }}</span>
                    {% endif %}
                    {% if event.minDivingLevel %}
                        <span>üèä Niveau min: {{ event.minDivingLevel.name }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="text-right">
                {% if event.maxParticipants %}
                    <div class="text-lg font-semibold text-gray-900">
                        {{ activeParticipants|length }}/{{ event.maxParticipants }}
                    </div>
                    <div class="text-sm text-gray-500">participants</div>
                    {% if waitingList|length > 0 %}
                        <div class="text-sm text-yellow-600 mt-1">
                            + {{ waitingList|length }} en attente
                        </div>
                    {% endif %}
                {% else %}
                    <div class="text-lg font-semibold text-gray-900">{{ activeParticipants|length }}</div>
                    <div class="text-sm text-gray-500">participants</div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Points de rendez-vous -->
    {% if event.clubMeetingTime or event.siteMeetingTime %}
        <div class="px-6 py-4">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Points de rendez-vous</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {% if event.clubMeetingTime %}
                    <div class="bg-blue-50 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <h4 class="text-sm font-medium text-blue-900">üè† RDV au club</h4>
                                <p class="text-sm text-blue-700">{{ event.clubMeetingTime|date('H:i') }}</p>
                            </div>
                            <div class="text-right">
                                <div class="text-lg font-semibold text-blue-900">{{ clubMeetingParticipants|length }}</div>
                                <div class="text-xs text-blue-700">participants</div>
                            </div>
                        </div>
                    </div>
                {% endif %}
                {% if event.siteMeetingTime %}
                    <div class="bg-green-50 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <h4 class="text-sm font-medium text-green-900">üåä RDV sur site</h4>
                                <p class="text-sm text-green-700">{{ event.siteMeetingTime|date('H:i') }}</p>
                            </div>
                            <div class="text-right">
                                <div class="text-lg font-semibold text-green-900">{{ siteMeetingParticipants|length }}</div>
                                <div class="text-xs text-green-700">participants</div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

<!-- Participants actifs -->
<div class="bg-white shadow-sm rounded-lg mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">
            Participants inscrits ({{ activeParticipants|length }})
        </h2>
    </div>

    {% if activeParticipants is empty %}
        <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">Aucun participant</h3>
            <p class="mt-1 text-sm text-gray-500">Personne ne s'est encore inscrit √† cet √©v√©nement.</p>
        </div>
    {% else %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Participant
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Niveau
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            RDV
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Inscription
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Statut
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for participation in activeParticipants %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-8 w-8">
                                        <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                                            <span class="text-sm font-medium text-gray-700">
                                                {{ participation.participant.displayName|slice(0, 1)|upper }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ participation.participant.displayName }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ participation.participant.email }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.participant.highestDivingLevel %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        {{ participation.participant.highestDivingLevel.name }}
                                    </span>
                                {% else %}
                                    <span class="text-sm text-gray-400">Non d√©fini</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.meetingPoint %}
                                    {% if participation.meetingPoint == 'club' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            üè† Club
                                        </span>
                                    {% elseif participation.meetingPoint == 'site' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            üåä Site
                                        </span>
                                    {% endif %}
                                {% else %}
                                    <span class="text-sm text-gray-400">Non d√©fini</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ participation.registrationDate|date('d/m/Y √† H:i') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    {{ participation.statusDisplayName }}
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

<!-- Liste d'attente -->
{% if waitingList|length > 0 %}
    <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">
                Liste d'attente ({{ waitingList|length }})
            </h2>
            <p class="mt-1 text-sm text-gray-500">
                Ces participants seront automatiquement inscrits si des places se lib√®rent.
            </p>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Position
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Participant
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Niveau
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Inscription
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for participation in waitingList %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-yellow-100 text-yellow-800 text-xs font-medium">
                                    {{ loop.index }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-8 w-8">
                                        <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                                            <span class="text-sm font-medium text-gray-700">
                                                {{ participation.participant.displayName|slice(0, 1)|upper }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ participation.participant.displayName }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ participation.participant.email }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.participant.highestDivingLevel %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        {{ participation.participant.highestDivingLevel.name }}
                                    </span>
                                {% else %}
                                    <span class="text-sm text-gray-400">Non d√©fini</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ participation.registrationDate|date('d/m/Y √† H:i') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}
{% endblock %}