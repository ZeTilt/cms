        <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Modifier l'√©v√©nement
    </a>
</div>
{% endblock %}

{% block content %}
<!-- Informations de l'√©v√©nement -->
<div class="bg-white shadow-sm rounded-lg mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-lg font-medium text-gray-900">{{ event.title }}</h2>
                <div class="mt-1 flex items-center space-x-4 text-sm text-gray-500">
                    <span>üìÖ {{ event.startDate|date('d/m/Y √† H:i') }}</span>
                    {% if event.location %}
                        <span>üìç {{ event.location }}</span>
                    {% endif %}
                    {% if event.minDivingLevel %}
                        <span>üèä Niveau min: {{ event.minDivingLevel.name }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="text-right">
                {% if event.maxParticipants %}
                    <div class="text-lg font-semibold text-gray-900">
                        {{ activeParticipants|length }}/{{ event.maxParticipants }}
                    </div>
                    <div class="text-sm text-gray-500">participants</div>
                    {% if waitingList|length > 0 %}
                        <div class="text-sm text-yellow-600 mt-1">
                            + {{ waitingList|length }} en attente
                        </div>
                    {% endif %}
                {% else %}
                    <div class="text-lg font-semibold text-gray-900">{{ activeParticipants|length }}</div>
                    <div class="text-sm text-gray-500">participants</div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Points de rendez-vous -->
    {% if event.clubMeetingTime or event.siteMeetingTime %}
        <div class="px-6 py-4">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Points de rendez-vous</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {% if event.clubMeetingTime %}
                    <div class="bg-blue-50 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <h4 class="text-sm font-medium text-blue-900">üè† RDV au club</h4>
                                <p class="text-sm text-blue-700">{{ event.clubMeetingTime|date('H:i') }}</p>
                            </div>
                            <div class="text-right">
                                <div class="text-lg font-semibold text-blue-900">{{ clubMeetingParticipants|length }}</div>
                                <div class="text-xs text-blue-700">participants</div>
                            </div>
                        </div>
                    </div>
                {% endif %}
                {% if event.siteMeetingTime %}
                    <div class="bg-green-50 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <h4 class="text-sm font-medium text-green-900">üåä RDV sur site</h4>
                                <p class="text-sm text-green-700">{{ event.siteMeetingTime|date('H:i') }}</p>
                            </div>
                            <div class="text-right">
                                <div class="text-lg font-semibold text-green-900">{{ siteMeetingParticipants|length }}</div>
                                <div class="text-xs text-green-700">participants</div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

<!-- R√©capitulatif encadrants/autonomes -->
{% set instructorCount = 0 %}
{% set autonomousCount = 0 %}
{% for participation in activeParticipants %}
    {% if participation.participationType == 'instructor' %}
        {% set instructorCount = instructorCount + 1 %}
    {% elseif participation.participationType == 'autonomous' %}
        {% set autonomousCount = autonomousCount + 1 %}
    {% endif %}
{% endfor %}

{% if instructorCount > 0 or autonomousCount > 0 %}
<div class="bg-white shadow-sm rounded-lg mb-6">
    <div class="px-6 py-4">
        <h3 class="text-sm font-medium text-gray-900 mb-3">R√©partition encadrants/autonomes</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-green-50 rounded-lg p-4 border-2 border-green-200">
                <div class="flex items-center justify-between">
                    <div>
                        <h4 class="text-sm font-medium text-green-900">üë®‚Äçüè´ Encadrants</h4>
                        <p class="text-xs text-green-700 mt-1">Participants encadrant l'√©v√©nement</p>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold text-green-900">{{ instructorCount }}</div>
                    </div>
                </div>
            </div>
            <div class="bg-purple-50 rounded-lg p-4 border-2 border-purple-200">
                <div class="flex items-center justify-between">
                    <div>
                        <h4 class="text-sm font-medium text-purple-900">ü§ø Autonomes</h4>
                        <p class="text-xs text-purple-700 mt-1">Participants en autonomie</p>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold text-purple-900">{{ autonomousCount }}</div>
                    </div>
                </div>
            </div>
        </div>
        {% if instructorCount > 0 and autonomousCount > 0 %}
            <div class="mt-3 p-3 bg-blue-50 rounded-lg border border-blue-200">
                <div class="flex items-center text-sm text-blue-900">
                    <svg class="h-5 w-5 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium">Ratio : </span>
                    <span class="ml-1">{{ instructorCount }} encadrant(s) pour {{ autonomousCount }} autonome(s)</span>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endif %}

<!-- Participants actifs -->
<div class="bg-white shadow-sm rounded-lg mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">
            Participants inscrits ({{ activeParticipants|length }})
        </h2>
    </div>

    {% if activeParticipants is empty %}
        <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">Aucun participant</h3>
            <p class="mt-1 text-sm text-gray-500">Personne ne s'est encore inscrit √† cet √©v√©nement.</p>
        </div>
    {% else %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Participant
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            T√©l√©phone
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Niveau
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Type
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Certificat m√©dical
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            RDV
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Places
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for participation in activeParticipants %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    {{ avatar_macro.user_avatar(participation.participant, 'md') }}
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ participation.participant.fullName }}
                                        </div>
                                        <div class="text-xs text-gray-500">
                                            Inscrit le {{ participation.registrationDate|date('d/m/Y') }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.participant.phoneNumber %}
                                    <a href="tel:{{ participation.participant.phoneNumber }}" class="text-club-blue hover:underline text-sm">
                                        {{ participation.participant.phoneNumber }}
                                    </a>
                                {% else %}
                                    <span class="text-sm text-gray-400">-</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.participant.highestDivingLevel %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        {{ participation.participant.highestDivingLevel.name }}
                                    </span>
                                {% else %}
                                    <span class="text-sm text-gray-400">-</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.participationType == 'instructor' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        üë®‚Äçüè´ Encadrant
                                    </span>
                                {% elseif participation.participationType == 'autonomous' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                        ü§ø Autonome
                                    </span>
                                {% else %}
                                    <span class="text-sm text-gray-400">-</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.participant.medicalCertificateExpiry %}
                                    {% set isExpired = participation.participant.medicalCertificateExpiry < date('today') %}
                                    {% set isExpiringSoon = participation.participant.medicalCertificateExpiry < date('+30 days') and not isExpired %}
                                    <div class="text-sm">
                                        <span class="{% if isExpired %}text-red-600 font-semibold{% elseif isExpiringSoon %}text-orange-600 font-medium{% else %}text-gray-900{% endif %}">
                                            {{ participation.participant.medicalCertificateExpiry|date('d/m/Y') }}
                                        </span>
                                        {% if isExpired %}
                                            <div class="text-xs text-red-500 mt-0.5">‚ö†Ô∏è Expir√©</div>
                                        {% elseif isExpiringSoon %}
                                            <div class="text-xs text-orange-500 mt-0.5">‚è∞ Expire bient√¥t</div>
                                        {% endif %}
                                        {% if participation.participant.medicalCertificateFile %}
                                            <a href="{{ path('download_medical_certificate', {userId: participation.participant.id}) }}"
                                               class="text-xs text-club-blue hover:underline flex items-center mt-1"
                                               target="_blank">
                                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                </svg>
                                                Voir le certificat
                                            </a>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <span class="text-sm text-gray-400">Non renseign√©</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.meetingPoint %}
                                    {% if participation.meetingPoint == 'club' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            üè† Club
                                        </span>
                                    {% elseif participation.meetingPoint == 'site' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            üåä Site
                                        </span>
                                    {% endif %}
                                {% else %}
                                    <span class="text-sm text-gray-400">-</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <span class="text-sm font-semibold text-gray-900">{{ participation.quantity }}</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <form method="POST" action="{{ path('dp_events_remove_participant', {id: event.id, participationId: participation.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir d√©sinscrire ce participant ?');" style="display: inline;">
                                    <button type="submit" class="text-red-600 hover:text-red-900">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                        </svg>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

<!-- Liste d'attente -->
{% if waitingList|length > 0 %}
    <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">
                Liste d'attente ({{ waitingList|length }})
            </h2>
            <p class="mt-1 text-sm text-gray-500">
                Ces participants seront automatiquement inscrits si des places se lib√®rent.
            </p>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Position
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Participant
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Niveau
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Inscription
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for participation in waitingList %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-yellow-100 text-yellow-800 text-xs font-medium">
                                    {{ loop.index }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    {{ avatar_macro.user_avatar(participation.participant, 'sm') }}
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ participation.participant.fullName }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ participation.participant.email }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if participation.participant.highestDivingLevel %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        {{ participation.participant.highestDivingLevel.name }}
                                    </span>
                                {% else %}
                                    <span class="text-sm text-gray-400">Non d√©fini</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ participation.registrationDate|date('d/m/Y √† H:i') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}
{% endblock %}