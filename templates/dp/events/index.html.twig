{% extends 'dp/base.html.twig' %}

{% block page_title %}Gestion des √âv√©nements DP{% endblock %}

{% block page_actions %}
<a href="{{ path('dp_events_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-club-orange hover:bg-club-orange-dark">
    <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
    </svg>
    Nouvel √âv√©nement
</a>
{% endblock %}

{% block breadcrumb_items %}
<li class="flex items-center">
    <svg class="flex-shrink-0 h-4 w-4 text-gray-300 mx-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
    </svg>
    <span class="text-gray-500">√âv√©nements</span>
</li>
{% endblock %}

{% block content %}
<div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h2 class="text-lg font-medium text-gray-900">√âv√©nements de Plong√©e</h2>
            <span class="text-sm text-gray-500">{{ events|length }} √©v√©nement(s)</span>
        </div>
    </div>

    {% if events is empty %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">Aucun √©v√©nement</h3>
            <p class="mt-1 text-sm text-gray-500">Commencez par cr√©er votre premier √©v√©nement de plong√©e.</p>
            <div class="mt-6">
                <a href="{{ path('dp_events_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-club-orange hover:bg-club-orange-dark">
                    <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Nouvel √âv√©nement
                </a>
            </div>
        </div>
    {% else %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            √âv√©nement
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Date/Heure
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Type/Niveau
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Participants
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            RDV
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for event in events %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 w-3 h-3 rounded-full mr-3" style="background-color: {{ event.color ?? '#FD7E29' }}"></div>
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">{{ event.title }}</div>
                                        {% if event.location %}
                                            <div class="text-sm text-gray-500">üìç {{ event.location }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">{{ event.startDate|date('d/m/Y √† H:i') }}</div>
                                {% if event.endDate %}
                                    <div class="text-sm text-gray-500">‚Üí {{ event.endDate|date('d/m/Y √† H:i') }}</div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="space-y-1">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                          style="background-color: {{ event.color ?? '#FD7E29' }}1A; color: {{ event.color ?? '#FD7E29' }}">
                                        {{ event.typeDisplayName }}
                                    </span>
                                    {% if event.minDivingLevel %}
                                        <div class="text-xs text-gray-600">
                                            Niveau min: {{ event.minDivingLevel.name }}
                                        </div>
                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="space-y-1">
                                    {% if event.maxParticipants %}
                                        <div class="flex items-center text-sm text-gray-500">
                                            <span class="mr-2">{{ event.currentParticipants }}/{{ event.maxParticipants }}</span>
                                            <div class="flex-1 bg-gray-200 rounded-full h-2 w-16">
                                                {% set percentage = event.maxParticipants > 0 ? (event.currentParticipants / event.maxParticipants * 100) : 0 %}
                                                <div class="bg-club-orange h-2 rounded-full" style="width: {{ percentage }}%"></div>
                                            </div>
                                        </div>
                                        {% if event.waitingListCount > 0 %}
                                            <div class="text-xs text-yellow-600">
                                                + {{ event.waitingListCount }} en attente
                                            </div>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-sm text-gray-400">Places libres</span>
                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <div class="space-y-1">
                                    {% if event.clubMeetingTime %}
                                        <div class="flex items-center">
                                            <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-blue-100 text-blue-800">
                                                üè† {{ event.clubMeetingTime|date('H:i') }}
                                            </span>
                                            <span class="ml-1 text-xs text-gray-500">
                                                ({{ event.clubMeetingParticipants|length }})
                                            </span>
                                        </div>
                                    {% endif %}
                                    {% if event.siteMeetingTime %}
                                        <div class="flex items-center">
                                            <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-green-100 text-green-800">
                                                üåä {{ event.siteMeetingTime|date('H:i') }}
                                            </span>
                                            <span class="ml-1 text-xs text-gray-500">
                                                ({{ event.siteMeetingParticipants|length }})
                                            </span>
                                        </div>
                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end space-x-2">
                                    <a href="{{ path('dp_events_participants', {id: event.id}) }}"
                                       class="text-blue-600 hover:text-blue-900"
                                       title="Voir les participants">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                                        </svg>
                                    </a>
                                    <a href="{{ path('calendar_event_detail', {id: event.id}) }}"
                                       class="text-club-blue hover:text-club-blue-dark"
                                       target="_blank"
                                       title="Voir sur le site">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M14 4h6m0 0v6m0-6L10 14"/>
                                        </svg>
                                    </a>
                                    <a href="{{ path('dp_events_edit', {id: event.id}) }}"
                                       class="text-gray-600 hover:text-gray-900"
                                       title="Modifier">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}