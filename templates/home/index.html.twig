{% extends 'plongee_base.html.twig' %}

{% block title %}Accueil - Club Subaquatique des Vénètes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/carousel.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/carousel.js') }}"></script>
    <script src="{{ asset('assets/youtube-thumbnails.js') }}"></script>
{% endblock %}

{% block body %}
<!-- Hero Carousel -->
<section class="hero-carousel relative overflow-hidden" x-data="carousel()">
    <div class="relative h-full">
        <!-- Slides -->
        <template x-for="(slide, index) in slides" :key="index">
            <div 
                x-show="currentSlide === index"
                x-transition:enter="transition ease-in-out duration-300"
                x-transition:enter-start="opacity-0 transform translate-x-full"
                x-transition:enter-end="opacity-100 transform translate-x-0"
                x-transition:leave="transition ease-in-out duration-300"
                x-transition:leave-start="opacity-100 transform translate-x-0"
                x-transition:leave-end="opacity-0 transform -translate-x-full"
                class="absolute inset-0 bg-cover bg-center"
                :style="`background-image: url(${slide.image})`"
            ></div>
        </template>
        
        <!-- Navigation arrows -->
        <button @click="prevSlide()"
                class="absolute left-2 sm:left-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 sm:p-3 rounded-full hover:bg-opacity-75 transition">
            <svg class="w-4 h-4 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
        </button>

        <button @click="nextSlide()"
                class="absolute right-2 sm:right-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 sm:p-3 rounded-full hover:bg-opacity-75 transition">
            <svg class="w-4 h-4 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </button>
        
        <!-- Dots indicator -->
        <div class="absolute bottom-2 sm:bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-1.5 sm:space-x-2">
            <template x-for="(slide, index) in slides" :key="index">
                <button @click="goToSlide(index)"
                        :class="currentSlide === index ? 'bg-white' : 'bg-gray-400'"
                        class="w-2 h-2 sm:w-3 sm:h-3 rounded-full transition duration-300">
                </button>
            </template>
        </div>
    </div>
</section>

<!-- Main Content Area -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid lg:grid-cols-3 gap-8">
        
        <!-- Sidebar Left - Mini Calendrier -->
        <div class="lg:col-span-1 order-2 lg:order-1">
            <div class="bg-white rounded-lg shadow-lg p-6 sticky top-6">
                <h3 class="text-lg font-bold text-club-blue mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-club-orange" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                    </svg>
                    Prochains Événements
                </h3>
                
                <div class="space-y-4">
                    {% if upcoming_events is empty %}
                        <div class="text-center py-8">
                            <svg class="w-12 h-12 mx-auto text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <p class="text-gray-500 text-sm">Aucun événement prévu</p>
                        </div>
                    {% else %}
                        {% for event in upcoming_events %}
                            <div class="border-l-4 pl-3 py-2" style="border-color: {{ event.color ?? '#FD7E29' }}">
                                <div class="text-sm font-semibold text-gray-900">
                                    <a href="{{ path('calendar_event_detail', {id: event.id}) }}" 
                                       class="hover:text-club-orange">
                                        {{ event.title }}
                                    </a>
                                </div>
                                <div class="text-xs text-gray-600">
                                    {{ event.startDate|date('l j F') }}
                                </div>
                                <div class="text-xs" style="color: {{ event.color ?? '#FD7E29' }}">
                                    {{ event.startDate|date('H:i') }}
                                    {% if event.location %} - {{ event.location }}{% endif %}
                                </div>
                                {% if event.maxParticipants %}
                                    <div class="text-xs text-gray-500 mt-1">
                                        {{ event.currentParticipants }}/{{ event.maxParticipants }} places
                                        {% if event.isFullyBooked %}
                                            <span class="text-red-500 font-medium">COMPLET</span>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
                
                <div class="mt-6 pt-4 border-t border-gray-200">
                    <a href="{{ path('public_calendar') }}" class="text-sm text-club-orange hover:text-club-orange-dark font-medium">
                        Voir tout le calendrier →
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Main Content - Articles de blog -->
        <div class="lg:col-span-2 order-1 lg:order-2">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Dernières actualités</h2>
            
            <div class="space-y-8">
                {% for article in blog_articles|slice(0, 5) %}
                <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                    <!-- Article media (carousel or featured image) -->
                    {% set carousel_images = extract_carousel(article.content) %}
                    {% set all_images = extract_images(article.content) %}
                    
                    {% if carousel_images and carousel_images|length > 1 %}
                        <!-- Carousel from article content -->
                        <div class="h-64 md:h-80 relative overflow-hidden">
                            <div class="article-carousel home-carousel" data-carousel-id="article-{{ article.id }}">
                                <div class="relative overflow-hidden h-full">
                                    <div class="carousel-container relative h-full">
                                        {% for image in carousel_images %}
                                            <div class="carousel-slide {{ loop.first ? 'active' : '' }}" data-slide="{{ loop.index0 }}">
                                                {{ youtube_thumbnail_with_fallback(image, 'Image ' ~ loop.index, 'w-full h-64 md:h-80 object-contain bg-gray-100') }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                    
                                    {% if carousel_images|length > 1 %}
                                        <!-- Navigation arrows -->
                                        <button class="carousel-prev absolute left-2 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 hover:bg-opacity-70 text-white p-2 rounded-full transition-all duration-200">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                            </svg>
                                        </button>
                                        <button class="carousel-next absolute right-2 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 hover:bg-opacity-70 text-white p-2 rounded-full transition-all duration-200">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                            </svg>
                                        </button>
                                        
                                        <!-- Indicators -->
                                        <div class="carousel-indicators absolute bottom-2 left-1/2 transform -translate-x-1/2 flex space-x-1">
                                            {% for image in carousel_images %}
                                                <button class="carousel-dot {{ loop.first ? 'active' : '' }}" data-slide="{{ loop.index0 }}"></button>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% elseif article.featuredImage %}
                        <!-- Featured image -->
                        <div class="h-64 md:h-80 bg-gray-100">
                            {{ youtube_thumbnail_with_fallback(article.featuredImage, article.title, 'w-full h-64 md:h-80 object-contain') }}
                        </div>
                    {% elseif all_images and all_images|length > 0 %}
                        <!-- First image from content -->
                        <div class="h-64 md:h-80 bg-gray-100">
                            {{ youtube_thumbnail_with_fallback(all_images[0], article.title, 'w-full h-64 md:h-80 object-contain') }}
                        </div>
                    {% else %}
                        <!-- Fallback placeholder -->
                        <div class="h-64 md:h-80 bg-gradient-to-r from-blue-400 to-blue-600 flex items-center justify-center">
                            <div class="text-center text-white">
                                <svg class="w-16 h-16 mx-auto mb-2 opacity-75" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                                </svg>
                                <p class="text-sm opacity-75">Image à venir</p>
                            </div>
                        </div>
                    {% endif %}
                    
                    <div class="p-6">
                        <div class="flex items-center text-sm text-gray-500 mb-3">
                            <time datetime="{{ article.publishedAt|date('Y-m-d') }}">
                                {{ article.publishedAt|date('d F Y') }}
                            </time>
                            {% if article.tags|length > 0 %}
                                <span class="mx-2">•</span>
                                <div class="flex gap-1">
                                    {% for tag in article.tags|slice(0, 2) %}
                                        <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded text-xs">{{ tag }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                        
                        <h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-club-orange transition duration-200">
                            <a href="{{ path('public_article_show', {slug: article.slug}) }}">{{ article.title }}</a>
                        </h3>
                        
                        <p class="text-gray-600 mb-4 line-clamp-3">{{ article.excerpt }}</p>
                        
                        <a href="{{ path('public_article_show', {slug: article.slug}) }}" 
                           class="inline-flex items-center text-club-orange hover:text-club-orange-dark font-medium">
                            Lire la suite
                            <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                            </svg>
                        </a>
                    </div>
                </article>
                {% else %}
                <div class="text-center py-12">
                    <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                    </svg>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Aucun article publié</h3>
                    <p class="text-gray-600">Les actualités du club apparaîtront ici.</p>
                </div>
                {% endfor %}
            </div>
            
            {% if blog_articles|length > 0 %}
            <div class="text-center mt-8">
                <a href="{{ path('blog_index') }}" 
                   class="inline-flex items-center px-6 py-3 bg-club-blue text-white font-semibold rounded-lg hover:bg-club-blue-dark transition duration-300">
                    Toutes les actualités
                    <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                </a>
            </div>
            {% endif %}
        </div>
        
    </div>
</div>

<!-- Call to Action Section -->
<section class="bg-club-orange">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center">
            <h2 class="text-3xl font-bold text-white mb-4">Prêt à plonger avec nous ?</h2>
            <p class="text-xl text-orange-100 mb-8 max-w-2xl mx-auto">
                Rejoignez le Club Subaquatique des Vénètes et découvrez les merveilles des fonds marins. 
                Formation, convivialité et aventure vous attendent !
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="{{ path('public_page_show', {slug: 'tarifs-2025'}) }}" 
                   class="inline-flex items-center px-8 py-3 bg-white text-club-orange font-semibold rounded-lg hover:bg-gray-100 transition duration-300">
                    Voir nos tarifs
                </a>
                <a href="#contact" 
                   class="inline-flex items-center px-8 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-club-orange transition duration-300">
                    Nous contacter
                </a>
            </div>
        </div>
    </div>
</section>

<script>
function carousel() {
    return {
        currentSlide: 0,
        slides: [
            { image: '{{ asset("assets/images/IMG_1679-1080x500.jpg") }}' },
            { image: '{{ asset("assets/images/IMG_1753-01-1080x500.jpg") }}' },
            { image: '{{ asset("assets/images/IMG_1664-1080x500.jpg") }}' },
            { image: '{{ asset("assets/images/DSC036181-1080x500.jpg") }}' },
            { image: '{{ asset("assets/images/DSC03734-ex-1080x500.jpg") }}' },
            { image: '{{ asset("assets/images/DSC03720-ex-1080x500.jpg") }}' },
            { image: '{{ asset("assets/images/P1020334-1080x500.jpg") }}' },
            { image: '{{ asset("assets/images/P10201631-1080x500.jpg") }}' }
        ],
        
        nextSlide() {
            this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        },
        
        prevSlide() {
            this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        },
        
        goToSlide(index) {
            this.currentSlide = index;
        },
        
        autoplay() {
            setInterval(() => {
                this.nextSlide();
            }, 5000);
        },
        
        init() {
            this.autoplay();
        }
    }
}
</script>

{% endblock %}