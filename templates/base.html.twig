<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Club Subaquatique des Vénètes{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <script src="https://cdn.tailwindcss.com"></script>
            <script>
                tailwind.config = {
                    theme: {
                        extend: {
                            colors: {
                                'club-orange': '#FD7E29',
                                'club-orange-dark': '#E56B1F',
                                'club-blue': '#1E40AF',
                                'club-blue-dark': '#1E3A8A'
                            }
                        }
                    }
                }
            </script>
        {% endblock %}

        {% block javascripts %}
            {# Add JavaScript here #}
        {% endblock %}
    </head>
    <body class="bg-gray-50">
        <!-- Navigation -->
        <nav class="bg-white shadow">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a href="{{ path('app_home') }}" class="flex items-center space-x-3">
                            <img src="{{ asset('assets/logo sans fond.png') }}" alt="Club Vénètes" class="h-8 w-auto">
                            <span class="text-xl font-semibold text-gray-900">Club des Vénètes</span>
                        </a>
                    </div>
                    <div class="flex items-center space-x-8">
                        <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                            Accueil
                        </a>
                        {% if is_module_active('blog') %}
                            <a href="{{ path('blog_index') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                                Blog
                            </a>
                        {% endif %}
                        <a href="{{ path('admin_dashboard') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                            Admin
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
