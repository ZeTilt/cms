<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ZeTilt CMS{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <script src="https://cdn.tailwindcss.com"></script>
        {% endblock %}

        {% block javascripts %}
            <!-- Alpine.js for interactive components -->
            <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
        {% endblock %}
    </head>
    <body class="bg-gray-50">
        <!-- Navigation -->
        <nav class="bg-white shadow">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a href="{{ path('app_home') }}" class="flex items-center space-x-3">
                            <img src="{{ asset('assets/logo sans fond.png') }}" alt="ZeTilt" class="h-8 w-auto">
                            <span class="text-xl font-semibold text-gray-900">ZeTilt</span>
                        </a>
                    </div>
                    <div class="flex items-center space-x-8">
                        <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                            {{ 'breadcrumb.home'|trans({}, 'admin') }}
                        </a>
                        {% if is_module_active('blog') %}
                            <a href="{{ path('blog_index') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                                {{ 'breadcrumb.articles'|trans({}, 'articles') }}
                            </a>
                        {% endif %}
                        {% if is_module_active('events') %}
                            <a href="{{ path('events_index') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                                {{ 'breadcrumb.events'|trans({}, 'events') }}
                            </a>
                        {% endif %}
                        {% if is_module_active('services') %}
                            <a href="{{ path('services_index') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                                {{ 'breadcrumb.services'|trans({}, 'services') }}
                            </a>
                        {% endif %}
                        
                        <!-- Language Selector -->
                        {% include 'components/language_selector.html.twig' %}
                        
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin_dashboard') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                                    {{ 'navigation.admin'|trans({}, 'base') }}
                                </a>
                            {% endif %}
                            <a href="{{ path('profile_show') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                                {{ 'navigation.my_profile'|trans({}, 'base') }}
                            </a>
                            <span class="text-gray-600 px-3 py-2 text-sm">
                                {{ 'navigation.hello'|trans({'%username%': app.user.username}, 'base') }}
                            </span>
                            <a href="{{ path('app_logout') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
                                {{ 'navigation.logout'|trans({}, 'base') }}
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                                {{ 'navigation.login'|trans({}, 'base') }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>

        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
