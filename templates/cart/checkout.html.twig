{% extends 'base.html.twig' %}

{% block title %}{{ 'checkout.title'|trans({}, 'cart') }} - ZeTilt CMS{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
        <nav class="flex" aria-label="Breadcrumb">
            <ol role="list" class="flex items-center space-x-4">
                <li>
                    <a href="{{ path('cart_index') }}" class="text-gray-400 hover:text-gray-500">{{ 'checkout.breadcrumb.cart'|trans({}, 'cart') }}</a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="ml-4 text-sm font-medium text-gray-500">{{ 'checkout.breadcrumb.checkout'|trans({}, 'cart') }}</span>
                    </div>
                </li>
            </ol>
        </nav>
        <h1 class="mt-2 text-3xl font-bold text-gray-900">{{ 'checkout.title'|trans({}, 'cart') }}</h1>
    </div>

    <form action="{{ path('cart_process_payment') }}" method="post" class="lg:grid lg:grid-cols-2 lg:gap-x-12 xl:gap-x-16">
        <div>
            <!-- Informations de contact -->
            <div>
                <h2 class="text-lg font-medium text-gray-900">{{ 'checkout.contact_info'|trans({}, 'cart') }}</h2>
                
                <div class="mt-4 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-4">
                    <div>
                        <label for="first_name" class="block text-sm font-medium text-gray-700">{{ 'checkout.first_name'|trans({}, 'cart') }}</label>
                        <div class="mt-1">
                            <input type="text" id="first_name" name="first_name" value="{{ user.firstName }}" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
                        </div>
                    </div>

                    <div>
                        <label for="last_name" class="block text-sm font-medium text-gray-700">{{ 'checkout.last_name'|trans({}, 'cart') }}</label>
                        <div class="mt-1">
                            <input type="text" id="last_name" name="last_name" value="{{ user.lastName }}" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <label for="email" class="block text-sm font-medium text-gray-700">{{ 'checkout.email'|trans({}, 'cart') }}</label>
                        <div class="mt-1">
                            <input type="email" id="email" name="email" value="{{ user.email }}" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Adresse de facturation -->
            <div class="mt-10 border-t border-gray-200 pt-10">
                <h2 class="text-lg font-medium text-gray-900">{{ 'checkout.billing_address'|trans({}, 'cart') }}</h2>

                <div class="mt-4 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-4">
                    <div class="sm:col-span-2">
                        <label for="address" class="block text-sm font-medium text-gray-700">{{ 'checkout.address'|trans({}, 'cart') }}</label>
                        <div class="mt-1">
                            <input type="text" id="address" name="address" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                    </div>

                    <div>
                        <label for="city" class="block text-sm font-medium text-gray-700">{{ 'checkout.city'|trans({}, 'cart') }}</label>
                        <div class="mt-1">
                            <input type="text" id="city" name="city" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                    </div>

                    <div>
                        <label for="postal_code" class="block text-sm font-medium text-gray-700">{{ 'checkout.postal_code'|trans({}, 'cart') }}</label>
                        <div class="mt-1">
                            <input type="text" id="postal_code" name="postal_code" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <label for="country" class="block text-sm font-medium text-gray-700">{{ 'checkout.country'|trans({}, 'cart') }}</label>
                        <div class="mt-1">
                            <select id="country" name="country" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                <option value="FR" selected>France</option>
                                <option value="BE">Belgique</option>
                                <option value="CH">Suisse</option>
                                <option value="CA">Canada</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes spéciales -->
            <div class="mt-10 border-t border-gray-200 pt-10">
                <h2 class="text-lg font-medium text-gray-900">{{ 'checkout.special_notes'|trans({}, 'cart') }}</h2>
                <div class="mt-4">
                    <label for="notes" class="block text-sm font-medium text-gray-700">{{ 'checkout.notes_label'|trans({}, 'cart') }}</label>
                    <div class="mt-1">
                        <textarea id="notes" name="notes" rows="3" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="{{ 'checkout.notes_placeholder'|trans({}, 'cart') }}"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Résumé de commande -->
        <div class="mt-10 lg:mt-0">
            <h2 class="text-lg font-medium text-gray-900">{{ 'checkout.order_summary'|trans({}, 'cart') }}</h2>

            <div class="mt-4 bg-white border border-gray-200 rounded-lg shadow-sm">
                <h3 class="sr-only">{{ 'checkout.items_in_cart'|trans({}, 'cart') }}</h3>
                <ul role="list" class="divide-y divide-gray-200">
                    {% for item in cart_items %}
                        <li class="flex py-6 px-4 sm:px-6">
                            <div class="flex-shrink-0">
                                <div class="w-20 h-20 border border-gray-200 rounded-md overflow-hidden">
                                    {% if item.item_type == 'gallery_access' %}
                                        <svg class="w-full h-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="ml-6 flex-1 flex flex-col">
                                <div class="flex">
                                    <div class="min-w-0 flex-1">
                                        <h4 class="text-sm">
                                            <span class="font-medium text-gray-700 hover:text-gray-800">{{ item.item_name }}</span>
                                        </h4>
                                        <p class="mt-1 text-sm text-gray-500">
                                            {% if item.item_type == 'gallery_access' %}
                                                {{ 'cart.item.gallery_access'|trans({}, 'cart') }}
                                            {% endif %}
                                        </p>
                                    </div>

                                    <div class="ml-4 flex-shrink-0 flow-root">
                                        <p class="text-sm font-medium text-gray-900">{{ item.total_price }} €</p>
                                    </div>
                                </div>

                                <div class="flex-1 pt-2 flex items-end justify-between">
                                    <p class="mt-1 text-sm font-medium text-gray-900">{{ 'checkout.quantity'|trans({}, 'cart') }}: {{ item.quantity }}</p>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
                <dl class="border-t border-gray-200 py-6 px-4 space-y-6 sm:px-6">
                    <div class="flex items-center justify-between">
                        <dt class="text-sm">{{ 'checkout.subtotal'|trans({}, 'cart') }}</dt>
                        <dd class="text-sm font-medium text-gray-900">{{ total_amount }} €</dd>
                    </div>
                    <div class="flex items-center justify-between">
                        <dt class="text-sm">{{ 'checkout.taxes'|trans({}, 'cart') }}</dt>
                        <dd class="text-sm font-medium text-gray-900">0,00 €</dd>
                    </div>
                    <div class="flex items-center justify-between border-t border-gray-200 pt-6">
                        <dt class="text-base font-medium">{{ 'checkout.total'|trans({}, 'cart') }}</dt>
                        <dd class="text-base font-medium text-gray-900">{{ total_amount }} €</dd>
                    </div>
                </dl>

                <div class="border-t border-gray-200 py-6 px-4 sm:px-6">
                    {% if total_amount == '0.00' %}
                        <button type="submit" class="w-full bg-green-600 border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            {{ 'checkout.confirm_free_order'|trans({}, 'cart') }}
                        </button>
                        <p class="mt-2 text-xs text-gray-500 text-center">
                            {{ 'checkout.free_order_notice'|trans({}, 'cart') }}
                        </p>
                    {% else %}
                        <button type="submit" class="w-full bg-indigo-600 border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            {{ 'checkout.proceed_to_payment'|trans({}, 'cart') }}
                        </button>
                        <p class="mt-2 text-xs text-gray-500 text-center">
                            {{ 'checkout.payment_notice'|trans({}, 'cart') }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}