{% extends 'base.html.twig' %}

{% block title %}{{ category }} - Blog - ZeTilt CMS{% endblock %}

{% block body %}
<div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <div class="mb-8">
                <a href="{{ path('blog_index') }}" class="inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500">
                    <svg class="-ml-1 mr-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    {{ 'actions.back'|trans({}, 'admin') }} au blog
                </a>
            </div>
            
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                {{ 'fields.category'|trans({}, 'articles') }}: {{ category }}
            </h2>
            <p class="mt-2 text-lg leading-8 text-gray-600">
                {{ 'messages.category_description'|trans({}, 'articles') }} "{{ category }}".
            </p>
        </div>
        
        {% if articles is empty %}
            <div class="mx-auto max-w-2xl lg:mx-0 mt-16">
                <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-semibold text-gray-900">{{ 'messages.no_articles'|trans({}, 'articles') }}</h3>
                    <p class="mt-1 text-sm text-gray-500">{{ 'messages.no_articles'|trans({}, 'articles') }} publié dans cette catégorie.</p>
                </div>
            </div>
        {% else %}
            <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                {% for article in articles %}
                    <article class="flex max-w-xl flex-col items-start justify-between">
                        <div class="flex items-center gap-x-4 text-xs">
                            <time datetime="{{ article.publishedAt|date('Y-m-d') }}" class="text-gray-500">
                                {{ article.publishedAt|date('F j, Y') }}
                            </time>
                        </div>
                        <div class="group relative">
                            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                                <a href="{{ path('blog_article', {slug: article.slug}) }}">
                                    <span class="absolute inset-0"></span>
                                    {{ article.title }}
                                </a>
                            </h3>
                            {% if article.excerpt %}
                                <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                                    {{ article.excerpt }}
                                </p>
                            {% endif %}
                        </div>
                        <div class="relative mt-8 flex items-center gap-x-4">
                            <div class="text-sm leading-6">
                                <p class="font-semibold text-gray-900">
                                    {{ article.author.fullName }}
                                </p>
                                <p class="text-gray-600">{{ 'fields.author'|trans({}, 'articles') }}</p>
                            </div>
                        </div>
                        {% if article.tags and article.tags|length > 0 %}
                            <div class="mt-4 flex flex-wrap gap-2">
                                {% for tag in article.tags %}
                                    <a href="{{ path('blog_tag', {tag: tag}) }}" class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-50 text-blue-700 hover:bg-blue-100">
                                        #{{ tag }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </article>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}