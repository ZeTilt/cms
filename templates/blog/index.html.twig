{% extends 'plongee_base.html.twig' %}

{% block title %}Actualités - Club Subaquatique des Vénètes{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/youtube-thumbnails.js') }}"></script>
{% endblock %}

{% block body %}
<div class="blog-page">
    <div class="blog-container">
        <div class="blog-header">
            <h2 class="blog-title">Actualités du club</h2>
            <p class="blog-description">
                Suivez toute l'actualité du Club Subaquatique des Vénètes : sorties, formations, événements et vie du club.
            </p>
        </div>

        {% if articles is empty %}
            <div class="blog-header empty-state">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="empty-state-title">Aucun article</h3>
                <p class="empty-state-text">Aucun article n'a encore été publié.</p>
            </div>
        {% else %}
            <div class="blog-grid">
                {% for article in articles %}
                    <article class="blog-article">
                        <div class="blog-article-meta">
                            <time datetime="{{ article.publishedAt|date('Y-m-d') }}" class="blog-article-date">
                                {{ article.publishedAt|date('F j, Y') }}
                            </time>
                            {% if article.category %}
                                <a href="{{ path('blog_category', {category: article.category}) }}" class="blog-article-category">
                                    {{ article.category }}
                                </a>
                            {% endif %}
                        </div>
                        <div class="blog-article-content">
                            {% set articleImages = extract_images(article.content) %}
                            {% if articleImages|length > 0 %}
                                <div class="blog-article-image">
                                    <img src="{{ articleImages[0] }}" alt="{{ article.title }}" loading="lazy">
                                </div>
                            {% endif %}

                            <h3 class="blog-article-heading">
                                <a href="{{ path('blog_article', {slug: article.slug}) }}">
                                    {{ article.title }}
                                </a>
                            </h3>
                            {% if article.excerpt %}
                                <p class="blog-article-excerpt">
                                    {{ article.excerpt }}
                                </p>
                            {% endif %}
                        </div>
                        <div class="blog-article-author">
                            <div class="blog-article-author-info">
                                <p class="blog-article-author-name">
                                    {{ article.author.fullName }}
                                </p>
                                <p class="blog-article-author-role">Auteur</p>
                            </div>
                        </div>
                        {% if article.tags and article.tags|length > 0 %}
                            <div class="blog-article-tags">
                                {% for tag in article.tags %}
                                    <a href="{{ path('blog_tag', {tag: tag}) }}" class="blog-tag">
                                        #{{ tag }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </article>
                {% endfor %}
            </div>

            <!-- Pagination -->
            {% include 'components/pagination.html.twig' with {
                current_page: current_page,
                total_pages: total_pages,
                total_articles: total_articles,
                route_name: 'blog_index'
            } %}
        {% endif %}
    </div>
</div>
{% endblock %}