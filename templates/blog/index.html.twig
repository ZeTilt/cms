{% extends 'plongee_base.html.twig' %}

{% block title %}Actualités - Club Subaquatique des Vénètes{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/youtube-thumbnails.js') }}"></script>
{% endblock %}

{% block body %}
<div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-3xl font-bold tracking-tight text-club-blue sm:text-4xl">Actualités du club</h2>
            <p class="mt-2 text-lg leading-8 text-gray-600">
                Suivez toute l'actualité du Club Subaquatique des Vénètes : sorties, formations, événements et vie du club.
            </p>
        </div>
        
        {% if articles is empty %}
            <div class="mx-auto max-w-2xl lg:mx-0 mt-16">
                <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-semibold text-gray-900">Aucun article</h3>
                    <p class="mt-1 text-sm text-gray-500">Aucun article n'a encore été publié.</p>
                </div>
            </div>
        {% else %}
            <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                {% for article in articles %}
                    <article class="flex max-w-xl flex-col items-start justify-between">
                        <div class="flex items-center gap-x-4 text-xs">
                            <time datetime="{{ article.publishedAt|date('Y-m-d') }}" class="text-gray-500">
                                {{ article.publishedAt|date('F j, Y') }}
                            </time>
                            {% if article.category %}
                                <a href="{{ path('blog_category', {category: article.category}) }}" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
                                    {{ article.category }}
                                </a>
                            {% endif %}
                        </div>
                        <div class="group relative">
                            {% set articleImages = extract_images(article.content) %}
                            {% if articleImages|length > 0 %}
                                <div class="aspect-video w-full overflow-hidden rounded-lg bg-gray-200 mb-4">
                                    <img src="{{ articleImages[0] }}" alt="{{ article.title }}" class="h-full w-full object-cover group-hover:opacity-75">
                                </div>
                            {% endif %}
                            
                            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                                <a href="{{ path('blog_article', {slug: article.slug}) }}">
                                    <span class="absolute inset-0"></span>
                                    {{ article.title }}
                                </a>
                            </h3>
                            {% if article.excerpt %}
                                <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                                    {{ article.excerpt }}
                                </p>
                            {% endif %}
                        </div>
                        <div class="relative mt-8 flex items-center gap-x-4">
                            <div class="text-sm leading-6">
                                <p class="font-semibold text-gray-900">
                                    {{ article.author.fullName }}
                                </p>
                                <p class="text-gray-600">Auteur</p>
                            </div>
                        </div>
                        {% if article.tags and article.tags|length > 0 %}
                            <div class="mt-4 flex flex-wrap gap-2">
                                {% for tag in article.tags %}
                                    <a href="{{ path('blog_tag', {tag: tag}) }}" class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-50 text-blue-700 hover:bg-blue-100">
                                        #{{ tag }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </article>
                {% endfor %}
            </div>

            <!-- Pagination -->
            {% include 'components/pagination.html.twig' with {
                current_page: current_page,
                total_pages: total_pages,
                total_articles: total_articles,
                route_name: 'blog_index'
            } %}
        {% endif %}
    </div>
</div>
{% endblock %}