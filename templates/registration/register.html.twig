{% extends 'plongee_base.html.twig' %}

{% block title %}Inscription - Club Subaquatique des Vénètes{% endblock %}

{% block body %}
<div class="auth-page">
    <div class="auth-header">
        <div class="auth-logo">
            <img src="{{ asset('assets/logo sans fond.webp') }}" alt="Club Subaquatique des Vénètes">
        </div>
        <h2 class="auth-title">Rejoindre le club</h2>
        <p class="auth-subtitle">Créez votre compte pour devenir membre du Club Subaquatique des Vénètes</p>
    </div>

    <div class="auth-container">
        <div class="auth-card">
            {% for message in app.flashes('error') %}
                <div class="auth-alert auth-alert-error">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="auth-alert auth-alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <form class="auth-form" method="POST">
                <!-- Prénom -->
                <div class="auth-form-group">
                    <label for="firstName">Prénom *</label>
                    <input id="firstName"
                           name="firstName"
                           type="text"
                           required
                           class="auth-input">
                </div>

                <!-- Nom -->
                <div class="auth-form-group">
                    <label for="lastName">Nom *</label>
                    <input id="lastName"
                           name="lastName"
                           type="text"
                           required
                           class="auth-input">
                </div>

                <!-- Email -->
                <div class="auth-form-group">
                    <label for="email">Adresse email *</label>
                    <input id="email"
                           name="email"
                           type="email"
                           required
                           class="auth-input"
                           placeholder="votre@email.com">
                </div>

                <!-- Mot de passe -->
                <div class="auth-form-group">
                    <label for="password">Mot de passe *</label>
                    <input id="password"
                           name="password"
                           type="password"
                           required
                           minlength="6"
                           class="auth-input">
                    <p class="profile-hint">Minimum 6 caractères</p>
                </div>

                <!-- Niveau de plongée -->
                {% if diving_levels is not empty %}
                <div class="auth-form-group">
                    <label for="diving_level">Niveau de plongée (optionnel)</label>
                    <select name="diving_level"
                            id="diving_level"
                            class="auth-select">
                        <option value="">-- Sélectionner un niveau --</option>
                        {% for level in diving_levels %}
                            <option value="{{ level.code }}">
                                {{ level.name }}{% if level.description %} - {{ level.description }}{% endif %}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}

                <!-- Bouton d'inscription -->
                <div>
                    <button type="submit" class="auth-btn">
                        S'inscrire
                    </button>
                </div>

                <!-- Lien vers connexion -->
                <div class="auth-footer">
                    <p>
                        Déjà membre ?
                        <a href="{{ path('app_login') }}">Se connecter</a>
                    </p>
                </div>
            </form>

            <!-- Informations importantes -->
            <div class="auth-info-box">
                <div class="auth-info-box-inner">
                    <div class="auth-info-box-icon">
                        <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="auth-info-box-content">
                        <h3 class="auth-info-box-title">À propos de l'inscription</h3>
                        <div class="auth-info-box-text">
                            <ul>
                                <li>Votre compte sera validé par un administrateur</li>
                                <li>Vous recevrez un email de confirmation</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
