{% extends 'plongee_base.html.twig' %}

{% block title %}Inscription - Club Subaquatique des Vénètes{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="flex justify-center">
            <img src="{{ asset('assets/logo sans fond.png') }}" alt="Club Subaquatique des Vénètes" class="h-20 w-auto">
        </div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-club-blue">
            Rejoindre le club
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Créez votre compte pour devenir membre du Club Subaquatique des Vénètes
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {% for message in app.flashes('error') %}
                <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded">
                    {{ message }}
                </div>
            {% endfor %}

            <form class="space-y-6" method="POST">
                <!-- Prénom -->
                <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700">
                        Prénom *
                    </label>
                    <div class="mt-1">
                        <input id="firstName" 
                               name="firstName" 
                               type="text" 
                               required 
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-club-orange focus:border-club-orange sm:text-sm">
                    </div>
                </div>

                <!-- Nom -->
                <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700">
                        Nom *
                    </label>
                    <div class="mt-1">
                        <input id="lastName" 
                               name="lastName" 
                               type="text" 
                               required 
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-club-orange focus:border-club-orange sm:text-sm">
                    </div>
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">
                        Adresse email *
                    </label>
                    <div class="mt-1">
                        <input id="email" 
                               name="email" 
                               type="email" 
                               required 
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-club-orange focus:border-club-orange sm:text-sm"
                               placeholder="votre@email.com">
                    </div>
                </div>

                <!-- Mot de passe -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">
                        Mot de passe *
                    </label>
                    <div class="mt-1">
                        <input id="password" 
                               name="password" 
                               type="password" 
                               required 
                               minlength="6"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-club-orange focus:border-club-orange sm:text-sm">
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Minimum 6 caractères</p>
                </div>

                <!-- Niveau de plongée -->
                {% if diving_levels is not empty %}
                <div>
                    <label for="diving_level" class="block text-sm font-medium text-gray-700">
                        Niveau de plongée (optionnel)
                    </label>
                    <div class="mt-1">
                        <select name="diving_level" 
                                id="diving_level"
                                class="block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-club-orange focus:border-club-orange sm:text-sm">
                            <option value="">-- Sélectionner un niveau --</option>
                            {% for level in diving_levels %}
                                <option value="{{ level.code }}">
                                    {{ level.name }}{% if level.description %} - {{ level.description }}{% endif %}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                {% endif %}

                <!-- Apnéiste -->
                <div>
                    <div class="flex items-center">
                        <input type="checkbox" 
                               name="is_freediver" 
                               id="is_freediver" 
                               value="1"
                               class="h-4 w-4 text-club-orange focus:ring-club-orange border-gray-300 rounded">
                        <label for="is_freediver" class="ml-2 block text-sm text-gray-900">
                            Je pratique l'apnée
                        </label>
                    </div>
                </div>

                <!-- Bouton d'inscription -->
                <div>
                    <button type="submit" 
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-club-orange hover:bg-club-orange-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-club-orange">
                        S'inscrire
                    </button>
                </div>

                <!-- Lien vers connexion -->
                <div class="text-center">
                    <p class="text-sm text-gray-600">
                        Déjà membre ? 
                        <a href="{{ path('app_login') }}" class="font-medium text-club-orange hover:text-club-orange-dark">
                            Se connecter
                        </a>
                    </p>
                </div>
            </form>

            <!-- Informations importantes -->
            <div class="mt-8 p-4 bg-blue-50 rounded-lg">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-blue-800">
                            À propos de l'inscription
                        </h3>
                        <div class="mt-2 text-sm text-blue-700">
                            <ul class="list-disc list-inside space-y-1">
                                <li>Votre compte sera validé par un administrateur</li>
                                <li>Vous recevrez un email de confirmation</li>
                                <li>Les informations de niveau sont facultatives</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}