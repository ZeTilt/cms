{% extends 'plongee_base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="auth-page">
    <div class="auth-header">
        <h2 class="auth-title">Mot de passe oublié</h2>
        <p class="auth-subtitle">Entrez votre adresse email pour recevoir un lien de réinitialisation</p>
    </div>

    <div class="auth-container">
        <div class="auth-card">
            {% for message in app.flashes('success') %}
                <div class="auth-alert auth-alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="auth-alert auth-alert-error">
                    {{ message }}
                </div>
            {% endfor %}

            <form class="auth-form" method="POST">
                <div class="auth-form-group">
                    <label for="email">Adresse email</label>
                    <input id="email" name="email" type="email" required
                           class="auth-input"
                           placeholder="votre@email.com">
                </div>

                <div>
                    <button type="submit" class="auth-btn">
                        Envoyer le lien de réinitialisation
                    </button>
                </div>

                <div class="auth-footer">
                    <a href="{{ path('app_login') }}">Retour à la connexion</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
