{% extends 'plongee_base.html.twig' %}

{% block title %}Connexion - Club Subaquatique des Vénètes{% endblock %}

{% block body %}
<div class="auth-page">
    <div class="auth-header">
        <div class="auth-logo">
            <img src="{{ asset('assets/logo sans fond.webp') }}" alt="Club Subaquatique des Vénètes">
        </div>
        <h2 class="auth-title">Espace Membre</h2>
        <p class="auth-subtitle">Connectez-vous à votre compte membre</p>
    </div>

    <div class="auth-container">
        <div class="auth-card">
            {% if error %}
                <div class="auth-alert auth-alert-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="auth-alert auth-alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="auth-alert auth-alert-error">
                    {{ message }}
                </div>
            {% endfor %}

            <form class="auth-form" action="{{ path('app_login') }}" method="post">
                <input type="hidden" name="token" value="{{ csrf_token('authenticate') }}">

                <!-- Adresse email -->
                <div class="auth-form-group">
                    <label for="inputEmail">Adresse email</label>
                    <input
                        id="inputEmail"
                        name="_username"
                        type="email"
                        value="{{ last_username }}"
                        required
                        autofocus
                        class="auth-input"
                        placeholder="votre@email.com">
                </div>

                <!-- Mot de passe -->
                <div class="auth-form-group">
                    <div class="auth-form-row">
                        <label for="inputPassword">Mot de passe</label>
                        <a href="{{ path('app_forgot_password') }}" class="auth-link">
                            Mot de passe oublié ?
                        </a>
                    </div>
                    <input
                        id="inputPassword"
                        name="_password"
                        type="password"
                        required
                        class="auth-input"
                        placeholder="Votre mot de passe">
                </div>

                <!-- Se souvenir de moi -->
                <div class="auth-checkbox-row">
                    <input
                        id="remember_me"
                        name="_remember_me"
                        type="checkbox"
                        class="auth-checkbox">
                    <label for="remember_me" class="auth-checkbox-label">
                        Se souvenir de moi
                    </label>
                </div>

                <!-- Bouton de connexion -->
                <div>
                    <button type="submit" class="auth-btn">
                        Se connecter
                    </button>
                </div>

                <!-- Lien vers inscription -->
                <div class="auth-footer">
                    <p>
                        Pas encore membre ?
                        <a href="{{ path('app_register') }}">Rejoindre le club</a>
                    </p>
                </div>
            </form>

            <!-- Informations importantes -->
            <div class="auth-info-box">
                <div class="auth-info-box-inner">
                    <div class="auth-info-box-icon">
                        <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="auth-info-box-content">
                        <h3 class="auth-info-box-title">Première connexion ?</h3>
                        <div class="auth-info-box-text">
                            <ul>
                                <li>Inscrivez-vous pour créer votre compte</li>
                                <li>Vérifiez votre email de confirmation</li>
                                <li>Attendez la validation par un administrateur</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
