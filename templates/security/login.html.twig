{% extends 'base.html.twig' %}

{% block title %}{{ 'title'|trans({}, 'security') }}{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                {{ 'app_title'|trans({}, 'security') }}
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                {{ 'subtitle'|trans({}, 'security') }}
            </p>
        </div>
        
        {% if error %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}
        
        <form class="mt-8 space-y-6" action="{{ path('app_login') }}" method="post">
            <input type="hidden" name="token" value="{{ csrf_token('authenticate') }}">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="inputEmail" class="sr-only">{{ 'login.email'|trans({}, 'security') }}</label>
                    <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="_username" 
                        id="inputEmail" 
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" 
                        placeholder="{{ 'login.email_placeholder'|trans({}, 'security') }}" 
                        required 
                        autofocus
                    >
                </div>
                <div>
                    <label for="inputPassword" class="sr-only">{{ 'login.password'|trans({}, 'security') }}</label>
                    <input 
                        type="password" 
                        name="_password" 
                        id="inputPassword" 
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" 
                        placeholder="{{ 'login.password_placeholder'|trans({}, 'security') }}" 
                        required
                    >
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input 
                        id="remember_me" 
                        name="_remember_me" 
                        type="checkbox" 
                        class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                    >
                    <label for="remember_me" class="ml-2 block text-sm text-gray-900">
                        {{ 'login.remember_me'|trans({}, 'security') }}
                    </label>
                </div>
            </div>

            <div>
                <button 
                    type="submit" 
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                    {{ 'login.sign_in'|trans({}, 'security') }}
                </button>
            </div>
            
            <div class="text-center text-xs text-gray-500">
                {{ 'login.default_credentials'|trans({}, 'security') }}
            </div>
            
            <div class="text-center">
                <span class="text-sm text-gray-600">
                    {{ 'login.no_account'|trans({}, 'security') }}
                    <a href="{{ path('registration_form') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
                        {{ 'login.create_account'|trans({}, 'security') }}
                    </a>
                </span>
            </div>
        </form>
    </div>
</div>
{% endblock %}