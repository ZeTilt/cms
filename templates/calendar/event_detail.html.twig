                                <div>
                                    <h3 class="text-lg font-semibold text-club-blue mb-3">üìç Lieu</h3>
                                    <div class="text-gray-700">
                                        {{ event.location }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Sidebar informations -->
                    <div class="md:col-span-1">
                        <!-- Participation -->
                        {% if event.maxParticipants %}
                            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                                <h3 class="text-lg font-semibold text-club-blue mb-4">üë• Participation</h3>
                                
                                <div class="text-center mb-4">
                                    <div class="text-3xl font-bold text-club-orange">
                                        {{ event.currentParticipants }}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        sur {{ event.maxParticipants }} places
                                    </div>
                                </div>

                                <!-- Barre de progression -->
                                <div class="mb-4">
                                    {% set percentage = event.maxParticipants > 0 ? (event.currentParticipants / event.maxParticipants * 100) : 0 %}
                                    <div class="w-full bg-gray-200 rounded-full h-3">
                                        <div class="bg-club-orange h-3 rounded-full transition-all duration-300" 
                                             style="width: {{ percentage }}%"></div>
                                    </div>
                                </div>

                                {% if event.isFullyBooked %}
                                    <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
                                        <div class="text-red-600 font-semibold mb-1">Complet</div>
                                        <div class="text-red-500 text-sm">Aucune place disponible</div>
                                    </div>
                                {% else %}
                                    <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-center">
                                        <div class="text-green-600 font-semibold mb-1">
                                            {{ event.availableSpots }} place(s) disponible(s)
                                        </div>
                                        <button class="mt-2 w-full bg-club-orange hover:bg-club-orange-dark text-white px-4 py-2 rounded-md font-medium transition-colors">
                                            S'inscrire
                                        </button>
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}

                        <!-- Informations compl√©mentaires -->
                        <div class="bg-gray-50 rounded-lg p-6">
                            <h3 class="text-lg font-semibold text-club-blue mb-4">‚ÑπÔ∏è Informations</h3>
                            
                            <div class="space-y-3 text-sm">
                                <div class="flex items-center justify-between">
                                    <span class="text-gray-600">Type:</span>
                                    <span class="font-medium">{{ event.typeDisplayName }}</span>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <span class="text-gray-600">Statut:</span>
                                    <span class="font-medium">{{ event.statusDisplayName }}</span>
                                </div>

                                {% if event.type == 'dive' %}
                                    <div class="pt-3 border-t border-gray-200">
                                        <div class="text-xs text-gray-500 mb-2">Recommandations plong√©e:</div>
                                        <ul class="text-xs text-gray-600 space-y-1">
                                            <li>‚Ä¢ Mat√©riel de plong√©e complet</li>
                                            <li>‚Ä¢ Carnet de plong√©e</li>
                                            <li>‚Ä¢ Certificat m√©dical valide</li>
                                        </ul>
                                    </div>
                                {% endif %}

                                {% if event.type == 'training' %}
                                    <div class="pt-3 border-t border-gray-200">
                                        <div class="text-xs text-gray-500 mb-2">Mat√©riel requis:</div>
                                        <ul class="text-xs text-gray-600 space-y-1">
