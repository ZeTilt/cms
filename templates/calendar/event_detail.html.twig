{% extends 'plongee_base.html.twig' %}

{% block title %}{{ event.title }} - Calendrier - Club Subaquatique des V√©n√®tes{% endblock %}

{% block body %}
<div class="bg-white py-8">
    <div class="mx-auto max-w-4xl px-6 lg:px-8">
        <!-- Navigation -->
        <div class="mb-8">
            <a href="{{ path('public_calendar') }}" 
               class="inline-flex items-center text-club-orange hover:text-club-orange-dark font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour au calendrier
            </a>
        </div>

        <!-- D√©tail de l'√©v√©nement -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Header color√© -->
            <div class="px-8 py-6" style="background-color: {{ event.color ?? '#FD7E29' }}">
                <div class="flex items-start justify-between">
                    <div class="text-white">
                        <h1 class="text-3xl font-bold mb-2">{{ event.title }}</h1>
                        <div class="flex items-center text-white/90">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <span>
                                {{ event.startDate|date('l j F Y √† H:i') }}
                                {% if event.endDate and event.endDate != event.startDate %}
                                    - {{ event.endDate|date('H:i') }}
                                {% endif %}
                            </span>
                        </div>
                    </div>
                    <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">
                        {{ event.typeDisplayName }}
                    </span>
                </div>
            </div>

            <!-- Contenu -->
            <div class="px-8 py-6">
                <div class="grid md:grid-cols-3 gap-8">
                    <!-- Informations principales -->
                    <div class="md:col-span-2">
                        {% if event.description %}
                            <div class="mb-8">
                                <h2 class="text-xl font-bold text-club-blue mb-4">Description</h2>
                                <div class="prose max-w-none text-gray-700">
                                    {{ event.description|nl2br }}
                                </div>
                            </div>
                        {% endif %}

                        <!-- Informations pratiques -->
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <h3 class="text-lg font-semibold text-club-blue mb-3">üìÖ Horaires</h3>
                                <div class="text-gray-700 space-y-1">
                                    <div>
                                        <strong>D√©but:</strong> {{ event.startDate|date('d/m/Y √† H:i') }}
                                    </div>
                                    {% if event.endDate %}
                                        <div>
                                            <strong>Fin:</strong> {{ event.endDate|date('d/m/Y √† H:i') }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            {% if event.location %}
                                <div>
                                    <h3 class="text-lg font-semibold text-club-blue mb-3">üìç Lieu</h3>
                                    <div class="text-gray-700">
                                        {{ event.location }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Sidebar informations -->
                    <div class="md:col-span-1">
                        <!-- Participation -->
                        {% if event.maxParticipants %}
                            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                                <h3 class="text-lg font-semibold text-club-blue mb-4">üë• Participation</h3>
                                
                                <div class="text-center mb-4">
                                    <div class="text-3xl font-bold text-club-orange">
                                        {{ event.currentParticipants }}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        sur {{ event.maxParticipants }} places
                                    </div>
                                </div>

                                <!-- Barre de progression -->
                                <div class="mb-4">
                                    {% set percentage = event.maxParticipants > 0 ? (event.currentParticipants / event.maxParticipants * 100) : 0 %}
                                    <div class="w-full bg-gray-200 rounded-full h-3">
                                        <div class="bg-club-orange h-3 rounded-full transition-all duration-300" 
                                             style="width: {{ percentage }}%"></div>
                                    </div>
                                </div>

                                {% if event.isFullyBooked %}
                                    <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
                                        <div class="text-red-600 font-semibold mb-1">Complet</div>
                                        <div class="text-red-500 text-sm">Aucune place disponible</div>
                                    </div>
                                {% else %}
                                    {% if app.user %}
                                        {% set eligibilityIssues = event.checkUserEligibility(app.user) %}
                                        {% if eligibilityIssues|length == 0 %}
                                            <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-center">
                                                <div class="text-green-600 font-semibold mb-1">
                                                    {{ event.availableSpots }} place(s) disponible(s)
                                                </div>
                                                <form method="POST" action="{{ path('event_register', {id: event.id}) }}" class="mt-2">
                                                    <button type="submit" class="w-full bg-club-orange hover:bg-club-orange-dark text-white px-4 py-2 rounded-md font-medium transition-colors">
                                                        S'inscrire
                                                    </button>
                                                </form>
                                            </div>
                                        {% else %}
                                            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                                                <div class="text-red-600 font-semibold mb-2 text-center">Conditions non remplies</div>
                                                <ul class="text-red-600 text-sm space-y-1 mb-3">
                                                    {% for issue in eligibilityIssues %}
                                                        <li class="flex items-start">
                                                            <svg class="w-4 h-4 mr-1 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                                            </svg>
                                                            {{ issue }}
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                                <button disabled class="w-full bg-gray-300 text-gray-500 px-4 py-2 rounded-md font-medium cursor-not-allowed">
                                                    Inscription non disponible
                                                </button>
                                            </div>
                                        {% endif %}
                                    {% else %}
                                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-center">
                                            <div class="text-blue-600 font-semibold mb-1">
                                                {{ event.availableSpots }} place(s) disponible(s)
                                            </div>
                                            <a href="{{ path('app_login') }}" class="mt-2 w-full inline-block bg-club-orange hover:bg-club-orange-dark text-white px-4 py-2 rounded-md font-medium transition-colors text-center">
                                                Se connecter pour s'inscrire
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                        {% endif %}

                        <!-- Informations compl√©mentaires -->
                        <div class="bg-gray-50 rounded-lg p-6">
                            <h3 class="text-lg font-semibold text-club-blue mb-4">‚ÑπÔ∏è Informations</h3>
                            
                            <div class="space-y-3 text-sm">
                                <div class="flex items-center justify-between">
                                    <span class="text-gray-600">Type:</span>
                                    <span class="font-medium">{{ event.typeDisplayName }}</span>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <span class="text-gray-600">Statut:</span>
                                    <span class="font-medium">{{ event.statusDisplayName }}</span>
                                </div>

                                {% if event.type == 'dive' %}
                                    <div class="pt-3 border-t border-gray-200">
                                        <div class="text-xs text-gray-500 mb-2">Recommandations plong√©e:</div>
                                        <ul class="text-xs text-gray-600 space-y-1">
                                            <li>‚Ä¢ Mat√©riel de plong√©e complet</li>
                                            <li>‚Ä¢ Carnet de plong√©e</li>
                                            <li>‚Ä¢ Certificat m√©dical valide</li>
                                        </ul>
                                    </div>
                                {% endif %}

                                {% if event.type == 'training' %}
                                    <div class="pt-3 border-t border-gray-200">
                                        <div class="text-xs text-gray-500 mb-2">Mat√©riel requis:</div>
                                        <ul class="text-xs text-gray-600 space-y-1">
                                            <li>‚Ä¢ Manuel de formation</li>
                                            <li>‚Ä¢ Mat√©riel de prise de notes</li>
                                            <li>‚Ä¢ √âquipement selon formation</li>
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Conditions d'inscription -->
                        {% if event.hasRequirements %}
                        <div class="bg-orange-50 border border-orange-200 rounded-lg p-6 mt-6">
                            <h3 class="text-lg font-semibold text-club-orange mb-4">‚ö†Ô∏è Conditions requises</h3>
                            
                            <div class="space-y-3 text-sm">
                                {% if event.minDivingLevel %}
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                        <span class="text-gray-700">
                                            <strong>Niveau minimum:</strong> {{ event.minDivingLevel }}
                                        </span>
                                    </div>
                                {% endif %}

                                {% if event.minAge or event.maxAge %}
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                        <span class="text-gray-700">
                                            <strong>√Çge:</strong>
                                            {% if event.minAge and event.maxAge %}
                                                entre {{ event.minAge }} et {{ event.maxAge }} ans
                                            {% elseif event.minAge %}
                                                minimum {{ event.minAge }} ans
                                            {% elseif event.maxAge %}
                                                maximum {{ event.maxAge }} ans
                                            {% endif %}
                                        </span>
                                    </div>
                                {% endif %}

                                {% if event.requiresMedicalCertificate %}
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                        <span class="text-gray-700">
                                            <strong>Certificat m√©dical requis</strong>
                                            {% if event.medicalCertificateValidityDays %}
                                                (valide {{ event.medicalCertificateValidityDays }} jours)
                                            {% endif %}
                                        </span>
                                    </div>
                                {% endif %}

                                {% if event.requiresSwimmingTest %}
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                        <span class="text-gray-700">
                                            <strong>Test de natation requis</strong>
                                        </span>
                                    </div>
                                {% endif %}

                                {% if event.additionalRequirements %}
                                    <div class="mt-4 pt-3 border-t border-orange-200">
                                        <div class="text-gray-700">
                                            <strong>Conditions suppl√©mentaires:</strong>
                                            <div class="mt-2 text-sm bg-white p-3 rounded border">
                                                {{ event.additionalRequirements|nl2br }}
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="mt-4 p-3 bg-orange-100 rounded text-xs text-orange-800">
                                <strong>Important:</strong> V√©rifiez que vous remplissez toutes les conditions avant de vous inscrire.
                            </div>
                        </div>
                        {% endif %}

                        <!-- Contact -->
                        <div class="bg-club-blue/5 rounded-lg p-6 mt-6">
                            <h3 class="text-lg font-semibold text-club-blue mb-4">üìû Contact</h3>
                            <div class="text-sm text-gray-700 space-y-2">
                                <p>Pour plus d'informations sur cet √©v√©nement :</p>
                                <div class="font-medium">
                                    üìß contact@venetes-plongee.fr<br>
                                    üì± 02 97 XX XX XX
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}