{% extends 'plongee_base.html.twig' %}

{% block title %}{{ page.title }} - Club Subaquatique des Vénètes{% endblock %}

{% block meta_description %}{{ page.excerpt ?? 'Club de plongée sous-marine à Vannes' }}{% endblock %}

{% block body %}
<div class="bg-white py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
            <!-- Header -->
            <div class="mb-12">
                <h1 class="text-4xl font-bold tracking-tight text-gray-900 mb-4">
                    {{ page.title }}
                </h1>
                {% if page.excerpt %}
                <p class="text-xl text-gray-600">{{ page.excerpt }}</p>
                {% endif %}
            </div>

            <!-- Content -->
            <div class="prose prose-lg max-w-none prose-headings:text-club-blue prose-a:text-club-orange hover:prose-a:text-club-orange-dark">
                {{ page.content|raw }}
            </div>

            <!-- Meta info -->
            {% if page.publishedAt or page.tags|length > 0 %}
            <div class="mt-12 pt-8 border-t border-gray-200">
                <div class="flex items-center justify-between flex-wrap gap-4">
                    {% if page.publishedAt %}
                    <div class="flex items-center text-sm text-gray-500">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                        </svg>
                        Publié le {{ page.publishedAt|date('d F Y') }}
                    </div>
                    {% endif %}
                    
                    {% if page.tags|length > 0 %}
                    <div class="flex gap-2">
                        {% for tag in page.tags %}
                        <span class="bg-club-orange bg-opacity-10 text-club-orange px-3 py-1 rounded-full text-sm">
                            {{ tag }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- Navigation -->
            <div class="mt-12 pt-8 border-t border-gray-200">
                <div class="flex justify-between items-center">
                    <a href="{{ path('app_home') }}" 
                       class="inline-flex items-center text-club-orange hover:text-club-orange-dark font-medium">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
                        </svg>
                        Retour à l'accueil
                    </a>

                    <!-- Social sharing -->
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-500">Partager :</span>
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ app.request.uri }}" 
                           target="_blank"
                           class="text-gray-400 hover:text-blue-600 transition">
                            <span class="sr-only">Facebook</span>
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Related content section -->
{% if page.type == 'page' %}
<section class="bg-gray-50 py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Découvrez aussi</h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white rounded-lg shadow p-6 text-center">
                <div class="w-12 h-12 bg-club-orange rounded-full mx-auto mb-4 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold mb-2">Nos activités</h3>
                <p class="text-gray-600 text-sm mb-4">Formations, sorties, spécialités</p>
                <a href="{{ path('public_page_show', {slug: 'nos-activites'}) }}" 
                   class="text-club-orange hover:text-club-orange-dark font-medium text-sm">
                    En savoir plus →
                </a>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6 text-center">
                <div class="w-12 h-12 bg-club-blue rounded-full mx-auto mb-4 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold mb-2">Actualités</h3>
                <p class="text-gray-600 text-sm mb-4">Sorties, formations, événements</p>
                <a href="{{ path('public_blog_list') }}" 
                   class="text-club-orange hover:text-club-orange-dark font-medium text-sm">
                    Lire les actualités →
                </a>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6 text-center">
                <div class="w-12 h-12 bg-green-500 rounded-full mx-auto mb-4 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 2C5.589 2 2 5.589 2 10s3.589 8 8 8 8-3.589 8-8-3.589-8-8-8zM8.5 6.5a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM10 7.5A1.5 1.5 0 108.5 9 1.5 1.5 0 0010 7.5zM6 13.5h8a.5.5 0 000-1H6a.5.5 0 000 1z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold mb-2">Nous rejoindre</h3>
                <p class="text-gray-600 text-sm mb-4">Tarifs et inscriptions 2025</p>
                <a href="{{ path('public_page_show', {slug: 'tarifs-2025'}) }}" 
                   class="text-club-orange hover:text-club-orange-dark font-medium text-sm">
                    Voir les tarifs →
                </a>
            </div>
        </div>
    </div>
</section>
{% endif %}
{% endblock %}